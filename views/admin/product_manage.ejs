        // Function to handle image preview
        function handleImagePreview(inputId, previewId) {
            const input = document.getElementById(inputId);
            const preview = document.getElementById(previewId);

            input.addEventListener('change', (event) => {
                const file = event.target.files[0];
                if (file) {
                    const reader = new FileReader();
                    reader.onload = function (e) {
                        preview.src = e.target.result;
                        preview.classList.remove('hidden');
                    };
                    reader.readAsDataURL(file);
                } else {
                    preview.classList.add('hidden');
                }
            });
        }



        // Initialize the event listeners or addd modal
        function initializePreviews() {
            handleImagePreview('file-upload-input1', 'preview1');
            handleImagePreview('file-upload-input2', 'preview2');
            handleImagePreview('file-upload-input3', 'preview3');
            handleImagePreview('file-upload-input4', 'preview4');
        }


        initializePreviews();

        // Trigger the file input for a specific product and slot
        function triggerFileInput(productId, index) {
            document.getElementById(`file-upload-input-edit-${productId}-${index}`).click();
        }

        // Replace the image preview with a new file
        function replaceImagePreview(event, productId, index) {

            const file = event.target.files[0];
            if (file) {
                const reader = new FileReader();
                reader.onload = function (e) {
                    const preview = document.getElementById(`preview-edit-${productId}-${index}`);
                    if (preview) {
                        preview.src = e.target.result; // Update the preview image
                        preview.classList.remove('hidden'); // Show the preview if hidden
                    }
                };

                reader.readAsDataURL(file);
            }
        }

        // Clear the image slot and reset it
        function clearImageSlot(productId, index) {
            const preview = document.getElementById(`preview-edit-${productId}-${index}`);
            const input = document.getElementById(`file-upload-input-edit-${productId}-${index}`);
            const indexInput = document.getElementById(`image-index-${productId}-${index}`);
            preview.src = ''; // Clear the image preview
            preview.classList.add('hidden'); // Hide the preview
            input.value = ''; // Reset the input
        }

