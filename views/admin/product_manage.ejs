<body id="product_manage">

    <!--Content space -->
    <div class="flex-1  bg-main-white">

        <div class="pt-6 h-12">
            <div class="px-6 py-2 flex justify-between items-center">
                <h1 class="text-2xl font-semibold text-gray-900 ">Product Management</h1>
            </div>
        </div>

        <!-- breadcrumbs -->

        <div class="flex items-center justify-between pt-8 pb-4 px-6">
            <nav class="flex" aria-label="Breadcrumb">
                <ol class="inline-flex items-center space-x-1 md:space-x-2 rtl:space-x-reverse">
                    <li class="inline-flex items-center">
                        <a href="/admin/dashboard"
                            class="inline-flex items-center text-sm font-medium text-button-color hover:text-blue-600 dark:text-gray-400 dark:hover:text-white">
                            Dashboard
                        </a>
                    </li>
                    <li aria-current="page">
                        <div class="flex items-center">
                            <svg class="rtl:rotate-180 w-3 h-3 text-gray-400 mx-1" aria-hidden="true"
                                xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 6 10">
                                <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round"
                                    stroke-width="2" d="m1 9 4-4-4-4" />
                            </svg>
                            <span class="ms-1 text-sm font-medium text-gray-500 md:ms-2 dark:text-gray-400">Product
                                Management</span>
                        </div>
                    </li>
                </ol>
            </nav>


            <div class="flex space-x-4">
                <a href="/admin/add-products">
                    <button type="button"
                        class="flex space-x-4 focus:outline-none text-white bg-secondry-button  hover: focus:ring-4 focus:ring-secondry-button font-medium rounded-lg text-sm px-4 py-2.5 mb-2">
                        <span class="pr-2"><img src="/Icons/plus.svg" alt=""></span>Add Product
                    </button>
                </a>
            </div>

        </div>

        <!-- page content -->

        <div
            class=" px-6 py-5 flex  w-full items-center justify-between flex-column flex-wrap md:flex-row space-y-4 md:space-y-0 pb-4  dark:bg-gray-900">
            <div>
                <form action="/admin/products" method="get" id="sort-form">

                <label for="table-search-users" class="sr-only">Search</label>
                <div class="relative">
                    <div class="absolute inset-y-0 rtl:inset-r-0 start-0 flex items-center ps-3 pointer-events-none">
                        <svg class="w-4 h-4 text-gray-500 dark:text-gray-400" aria-hidden="true"
                            xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 20 20">
                            <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                d="m19 19-4-4m0-7A7 7 0 1 1 1 8a7 7 0 0 1 14 0Z" />
                        </svg>
                    </div>
                    <input type="text" id="table-search-users" name="search" value="<%=search%>"
                        class="block p-2 ps-10 text-sm text-gray-900 border border-gray-300 rounded-lg w-80 bg-gray-50 focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500"
                        placeholder="Search Product">
                        <p id="error-message"></p>
                </div>

            </div>

            <!--  sort -->
            <div class="relative inline-block">
                <select id="productSort" name="sort" class="block appearance-none w-full bg-white border border-gray-300 text-gray-700 py-2 px-8 pr-8 rounded-lg leading-tight focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent">
                    <option value="" disabled selected>Sort Products</option>
                    <optgroup label="Status">
                        <option value="active" <%= sort === 'active' ? 'selected' : '' %>>Active Products</option>
                        <option value="deleted" <%= sort === 'deleted' ? 'selected' : '' %>>Deleted Products</option>
                    </optgroup>
                    <optgroup label="Stock">
                        <option value="lowStock" <%= sort === 'lowStock' ? 'selected' : '' %>>Low Stock</option>
                        <option value="outOfStock" <%= sort === 'outOfStock' ? 'selected' : '' %>>Out of Stock</option>
                    </optgroup>
                    <optgroup label="Date">
                        <option value="newest" <%= sort === 'newest' ? 'selected' : '' %>>Newest First</option>
                        <option value="oldest" <%= sort === 'oldest' ? 'selected' : '' %>>Oldest First</option>
                    </optgroup>
                </select>
            </form>
               
            </div>
        </div>
        <div class=" bg-white rounded-lg shadow overflow-x-auto">

            <!-- table -->

            <table class=" bg-white  w-full text-sm text-left rtl:text-right text-gray-500 " id="userTable">
                <thead class="text-xs text-gray-700 uppercase bg-purple-50">
                    <tr>
                        <th scope="col" class="p-4">
                        </th>
                        <th scope="col" class="px-12 py-3 w-10">
                            Product
                        </th>
                        <th scope="col" class="px-9 py-3">
                            Category
                        </th>
                        <th scope="col" class="px-4 py-3">
                            Stock
                        </th>

                        <th scope="col" class="px-8 py-3">
                            Price
                        </th>
                        <th scope="col" class="px-10 py-3">
                            Status
                        </th>
                        <th scope="col" class="px-6 py-3">
                            Added
                        </th>
                        <th scope="col" class="px-6 py-3">
                            Action
                        </th>
                    </tr>
                </thead>
                <tbody>
                    <% if (products && products.length> 0) { %>
                        <% products.forEach((product, index)=> { %>

                            <tr
                                class="bg-white border-b dark:bg-gray-800 dark:border-gray-700 hover:bg-gray-50 dark:hover:bg-gray-600">
                                <td class="w-4 p-4">

                                </td>
                                <th scope="row"
                                    class="flex items-center px-6 py-4 text-gray-900 whitespace-nowrap dark:text-white">
                                    <img class="w-10 h-10 rounded-sm" src="<%=product.images[0]  %>" alt="Jese image">
                                    <div class="ps-3">
                                        <div class="text-base font-semibold p-3 product-name"
                                            style="font-weight: normal; font-size: 0.9rem; color: #656565; width: 16rem; word-wrap: break-word; word-break: break-word; white-space: normal;">
                                            <%= product.productName %>
                                        </div>  
                                        <div class="font-normal text-gray-500"></div>
                                    </div>
                                </th>
                                <td class="px-6 py-4">
                                    <%= product.category%>
                                </td>

                                <td class="px-6 py-4">
                                    <%= product.totalStock%>
                                </td>
                                <td class="px-6 py-4">
                                    â‚¹<%= product.discountedPrice%>
                                </td>

                                <td class="px-6 py-4">
                                    <% if (product.isDeleted) { %>
                                        <div
                                            class="h-7 px-3 py-1 bg-red-100 rounded-[100px] flex-col justify-center items-center gap-2 inline-flex">
                                            <div
                                                class="text-center text-red-500 text-sm font-semibold font-inter leading-tight tracking-tight p-1.5">
                                                Deleted</div>
                                        </div>

                                        <% } else if (product.totalStock<10 && product.totalStock>0) { %>
                                            <div
                                                class="h-7 px-3 py-1 bg-orange-100 rounded-[100px] flex-col justify-center items-center gap-2 inline-flex">
                                                <div
                                                    class="text-center text-red-400 text-sm font-semibold font-inter leading-tight tracking-tight p-1.5">
                                                    Low Stock</div>
                                            </div>
                                        <% } else if (product.totalStock===0) { %>
                                            <div
                                                class="h-7 px-3 py-1 bg-orange-100 rounded-[100px] flex-col justify-center items-center gap-2 inline-flex">
                                                <div
                                                    class="text-center text-red-500 text-sm font-semibold font-inter leading-tight tracking-tight p-1.5">
                                                    Out of Stock</div>
                                            </div>

                                            <% } else { %>
                                                <div
                                                    class="h-7 px-3 py-1 bg-green-100 rounded-[100px] flex-col justify-center items-center gap-2 inline-flex">
                                                    <div
                                                        class="text-center text-green-500 text-sm font-semibold font-inter leading-tight tracking-tight p-1.5">
                                                        Active</div>
                                                </div>
                                                <% } %>
                                </td>

                                <td class="px-6 py-4">
                                    <%= new Date(product.createdAt).toLocaleString('en-GB', { year: 'numeric' ,
                                        month: '2-digit' , day: '2-digit' ,hour: '2-digit' ,minute: '2-digit' ,hour12:
                                        false }) %>

                                </td>
                                <td class="px-6 pb-10 flex space-x-2">

                                    <!-- Product View button -->
                                     <a href="/admin/product/<%=product._id%>">
                                    <button" type="button">
                                        <img src="/Icons/eye.svg" alt=""></button>
                                    </a>

                                
                                    <!--edit button -->
                                        <a href="/admin/product/<%=product._id%>/edit">
                                        <button class="edit-btn" type="button">
                                            <img src="/Icons/pen.svg" alt="Edit" style="height: 20px;">
                                        </button>
                                    </a>

                                        <!-- delete button -->


                                    <button class="delete-btn" onclick="deleteProduct('<%= product._id %>')">
                                        <img src="<%= product.isDeleted ? '/Icons/recover.svg' : '/Icons/trash.svg' %>"
                                            alt="Delete">
                                    </button>
                                </td>
                            </tr>
                            <% }) %>
                                <% } else { %>
                                    <tr>
                                        <td colspan="3">No Products found.</td>
                                    </tr>
                                    <% } %>


                </tbody>
            </table>
        </div>


        <!-- Pagination -->

        <div class="flex items-center justify-between border-t border-gray-200  px-4 py-3 sm:px-6">
            <div class="flex flex-1 justify-between sm:hidden">
                <a href="#"
                    class="relative inline-flex items-center rounded-md border border-gray-300 bg-white px-4 py-2 text-sm font-medium text-gray-700 hover:bg-gray-50">Previous</a>
                <a href="#"
                    class="relative ml-3 inline-flex items-center rounded-md border border-gray-300 bg-white px-4 py-2 text-sm font-medium text-gray-700 hover:bg-gray-50">Next</a>
            </div>
            <div class="hidden sm:flex sm:flex-1 sm:items-center sm:justify-between">
                <div>
                    <p class="text-sm text-gray-700">
                        Showing
                        <span class="font-medium"><%= pagination.startIndex %></span>
                        to
                        <span class="font-medium"><%= pagination.endIndex %></span>
                        of
                        <span class="font-medium"><%= pagination.totalProducts %></span>
                        products
                    </p>
                </div>
                <div class="mt-2 flex justify-end">
                    <nav class="relative z-0 inline-flex rounded-md shadow-sm -space-x-px">
                        <% if (pagination.hasPrevPage) { %>
                            <a href="?page=<%= pagination.currentPage - 1 %>" 
                               class="px-3 py-2 rounded-l-md border bg-white text-gray-500 hover:bg-gray-50">
                                Previous
                            </a>
                        <% } %>

                        <% for (let i = 1; i <= pagination.totalPages; i++) { %>
                        <a href="?page=<%= i %>" class="px-3 py-2 border  text-button-color <%= pagination.currentPage === i ? 'bg-indigo-100' : 'bg-white'  %>"><%= i %></a>
                        <% }%>

                        <% if (pagination.hasNextPage) { %>
                            <a href="?page=<%= pagination.currentPage + 1 %>" 
                                class="px-3 py-2 rounded-r-md border bg-white text-gray-500 hover:bg-gray-50">Next</a>
                        <% } %>
                    </nav>
                </div>
            </div>
        </div>
    </div>



    <script>
        


    const form = document.querySelector('#sort-form');
    const searchInput=document.getElementById("table-search-users")

    document.querySelector('#productSort').addEventListener('change',()=>{
        form.submit();
    })
     searchInput.addEventListener("change", function () {
        form.submit();
    }); 
        function deleteProduct(productId) {
            window.location.href = `/admin/delete-product/${productId}`;

        }

        function editproduct(productId) {
            window.location.href = `/admin/edit-product/${productId}`;

        }

        searchInput.addEventListener("input", function () {
        const regex = /^[A-Za-z0-9 ]*$/; 
        const errorMessage = document.getElementById("error-message");

        if (!regex.test(this.value)) {
            errorMessage.classList.remove("hidden");
            this.value = this.value.replace(/[^A-Za-z0-9 ]/g, "");
        } else {
            errorMessage.classList.add("hidden");
        }
    });
    </script>

    <!-- Alpine.js -->
    <script src="https://cdn.jsdelivr.net/npm/alpinejs@3.12.0/dist/cdn.min.js"></script>

</body>
