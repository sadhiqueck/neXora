<body id="product_manage">

    <!--Content space -->
    <div class="flex-1  bg-main-white">

        <div class="pt-6 h-12">
            <div class="px-6 py-2 flex justify-between items-center">
                <h1 class="text-2xl font-semibold text-gray-900 ">Product Management</h1>
            </div>
        </div>

        <!-- breadcrumbs -->

        <div class="flex items-center justify-between pt-8 pb-4 px-6">
            <nav class="flex" aria-label="Breadcrumb">
                <ol class="inline-flex items-center space-x-1 md:space-x-2 rtl:space-x-reverse">
                    <li class="inline-flex items-center">
                        <a href="/admin/dashboard"
                            class="inline-flex items-center text-sm font-medium text-button-color hover:text-blue-600 dark:text-gray-400 dark:hover:text-white">
                            Dashboard
                        </a>
                    </li>
                    <li aria-current="page">
                        <div class="flex items-center">
                            <svg class="rtl:rotate-180 w-3 h-3 text-gray-400 mx-1" aria-hidden="true"
                                xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 6 10">
                                <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round"
                                    stroke-width="2" d="m1 9 4-4-4-4" />
                            </svg>
                            <span class="ms-1 text-sm font-medium text-gray-500 md:ms-2 dark:text-gray-400">Product
                                Management</span>
                        </div>
                    </li>
                </ol>
            </nav>


            <div class="flex space-x-4">
                <a href="/admin/add-products">
                    <button type="button"
                        class="flex space-x-4 focus:outline-none text-white bg-secondry-button  hover: focus:ring-4 focus:ring-secondry-button font-medium rounded-lg text-sm px-4 py-2.5 mb-2">
                        <span class="pr-2"><img src="/Icons/plus.svg" alt=""></span>Add Product
                    </button>
                </a>
            </div>

        </div>

        <!-- page content -->

        <div
            class=" px-6 py-5 flex items-center justify-between flex-column flex-wrap md:flex-row space-y-4 md:space-y-0 pb-4  dark:bg-gray-900">
            <div>
                <label for="table-search" class="sr-only">Search</label>
                <div class="relative">
                    <div class="absolute inset-y-0 rtl:inset-r-0 start-0 flex items-center ps-3 pointer-events-none">
                        <svg class="w-4 h-4 text-gray-500 dark:text-gray-400" aria-hidden="true"
                            xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 20 20">
                            <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                d="m19 19-4-4m0-7A7 7 0 1 1 1 8a7 7 0 0 1 14 0Z" />
                        </svg>
                    </div>
                    <input type="text" id="table-search-users"
                        class="block p-2 ps-10 text-sm text-gray-900 border border-gray-300 rounded-lg w-80 bg-gray-50 focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500"
                        placeholder="Search Product">
                </div>

            </div>

            <!--  sort -->
            <div class="relative inline-block mr-20">
                <button id="dropdownActionButton" data-dropdown-toggle="dropdownAction"
                    class="inline-flex items-center text-gray-500 bg-white border border-gray-300 focus:outline-none hover:bg-gray-100 focus:ring-4 focus:ring-gray-100 font-medium rounded-lg text-sm px-3 py-1.5 dark:bg-gray-800 dark:text-gray-400 dark:border-gray-600 dark:hover:bg-gray-700 dark:hover:border-gray-600 dark:focus:ring-gray-700"
                    type="button"><img src="/Icons/slider.svg" alt="" class="pr-2">
                    Sort
                </button>

                <!-- Dropdown menu -->
                <div id="dropdownAction"
                    class="absolute z-10 hidden w-48 bg-white divide-y divide-gray-100 rounded-lg shadow dark:bg-gray-700 dark:divide-gray-600 top-full mt-1">
                    <ul class="p-3 space-y-1 text-sm text-gray-700 dark:text-gray-200"
                        aria-labelledby="dropdownActionButton">
                        <li>
                            <div class="flex items-center p-2 rounded hover:bg-gray-100 dark:hover:bg-gray-600">
                                <input checked id="last-modified" type="radio" value="" name="sort-option"
                                    class="w-4 h-4 text-button-color bg-gray-100 border-gray-300 focus:ring-button-color dark:focus:ring-buttontext-button-color dark:ring-offset-gray-700 dark:focus:ring-offset-gray-700 focus:ring-2 dark:bg-gray-600 dark:border-gray-500">
                                <label for="last-modified"
                                    class="w-full ms-2 text-sm font-medium text-gray-900 rounded dark:text-gray-300">Last
                                    Modified</label>
                            </div>
                        </li>
                        <li>
                            <div class="flex items-center p-2 rounded hover:bg-gray-100 dark:hover:bg-gray-600">
                                <input id="ascending" type="radio" value="" name="sort-option"
                                    class="w-4 h-4 text-button-color bg-gray-100 border-gray-300 focus:ring-button-color dark:focus:ring-buttontext-button-color dark:ring-offset-gray-700 dark:focus:ring-offset-gray-700 focus:ring-2 dark:bg-gray-600 dark:border-gray-500">
                                <label for="ascending"
                                    class="w-full ms-2 text-sm font-medium text-gray-900 rounded dark:text-gray-300">Ascending</label>
                            </div>
                        </li>
                        <li>
                            <div class="flex items-center p-2 rounded hover:bg-gray-100 dark:hover:bg-gray-600">
                                <input id="descending" type="radio" value="" name="sort-option"
                                    class="w-4 h-4 text-button-color bg-gray-100 border-gray-300 focus:ring-button-color dark:focus:ring-buttontext-button-color dark:ring-offset-gray-700 dark:focus:ring-offset-gray-700 focus:ring-2 dark:bg-gray-600 dark:border-gray-500">
                                <label for="descending"
                                    class="w-full ms-2 text-sm font-medium text-gray-900 rounded dark:text-gray-300">Descending</label>
                            </div>
                        </li>
                        <li>
                            <div class="flex items-center p-2 rounded hover:bg-gray-100 dark:hover:bg-gray-600">
                                <input id="active" type="radio" value="" name="sort-option"
                                    class="w-4 h-4 text-button-color bg-gray-100 border-gray-300 focus:ring-button-color dark:focus:ring-buttontext-button-color dark:ring-offset-gray-700 dark:focus:ring-offset-gray-700 focus:ring-2 dark:bg-gray-600 dark:border-gray-500">
                                <label for="active"
                                    class="w-full ms-2 text-sm font-medium text-gray-900 rounded dark:text-gray-300">Active</label>
                            </div>
                        </li>
                        <li>
                            <div class="flex items-center p-2 rounded hover:bg-gray-100 dark:hover:bg-gray-600">
                                <input id="sort-radio" type="radio" value="" name="sort-option"
                                    class="w-4 h-4 text-button-color bg-gray-100 border-gray-300 focus:ring-button-color dark:focus:ring-buttontext-button-color dark:ring-offset-gray-700 dark:focus:ring-offset-gray-700 focus:ring-2 dark:bg-gray-600 dark:border-gray-500">
                                <label for="blocked"
                                    class="w-full ms-2 text-sm font-medium text-gray-900 rounded dark:text-gray-300">Blocked</label>
                            </div>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
        <div class=" bg-white rounded-lg shadow overflow-x-auto">

            <!-- table -->

            <table class=" bg-white  w-full text-sm text-left rtl:text-right text-gray-500 " id="userTable">
                <thead class="text-xs text-gray-700 uppercase bg-purple-50">
                    <tr>
                        <th scope="col" class="p-4">
                        </th>
                        <th scope="col" class="px-12 py-3 w-10">
                            Product
                        </th>
                        <th scope="col" class="px-9 py-3">
                            Category
                        </th>
                        <th scope="col" class="px-4 py-3">
                            Stock
                        </th>

                        <th scope="col" class="px-8 py-3">
                            Price
                        </th>
                        <th scope="col" class="px-10 py-3">
                            Status
                        </th>
                        <th scope="col" class="px-6 py-3">
                            Added
                        </th>
                        <th scope="col" class="px-6 py-3">
                            Action
                        </th>
                    </tr>
                </thead>
                <tbody>
                    <% if (products && products.length> 0) { %>
                        <% products.forEach((product, index)=> { %>

                            <tr
                                class="bg-white border-b dark:bg-gray-800 dark:border-gray-700 hover:bg-gray-50 dark:hover:bg-gray-600">
                                <td class="w-4 p-4">

                                </td>
                                <th scope="row"
                                    class="flex items-center px-6 py-4 text-gray-900 whitespace-nowrap dark:text-white">
                                    <img class="w-10 h-10 rounded-sm" src="<%=product.images[0]  %>" alt="Jese image">
                                    <div class="ps-3">
                                        <div class="text-base font-semibold p-3"
                                            style="font-weight: normal; font-size: 0.9rem; color: #656565; width: 16rem; word-wrap: break-word; word-break: break-word; white-space: normal;">
                                            <%= product.productName %>
                                        </div>
                                        <div class="font-normal text-gray-500"></div>
                                    </div>
                                </th>
                                <td class="px-6 py-4">
                                    <%= product.category%>
                                </td>

                                <td class="px-6 py-4">
                                    <%= product.quantity%>
                                </td>
                                <td class="px-6 py-4">
                                    ₹<%= product.price%>
                                </td>

                                <td class="px-6 py-4">
                                    <% if (product.isDeleted) { %>
                                        <div
                                            class="h-7 px-3 py-1 bg-red-100 rounded-[100px] flex-col justify-center items-center gap-2 inline-flex">
                                            <div
                                                class="text-center text-red-500 text-sm font-semibold font-inter leading-tight tracking-tight p-1.5">
                                                Deleted</div>
                                        </div>

                                        <% } else if (product.quantity< 5) { %>
                                            <div
                                                class="h-7 px-3 py-1 bg-orange-100 rounded-[100px] flex-col justify-center items-center gap-2 inline-flex">
                                                <div
                                                    class="text-center text-orange-400 text-sm font-semibold font-inter leading-tight tracking-tight p-1.5">
                                                    Low Stock</div>
                                            </div>

                                            <% } else { %>
                                                <div
                                                    class="h-7 px-3 py-1 bg-green-100 rounded-[100px] flex-col justify-center items-center gap-2 inline-flex">
                                                    <div
                                                        class="text-center text-green-500 text-sm font-semibold font-inter leading-tight tracking-tight p-1.5">
                                                        Active</div>
                                                </div>
                                                <% } %>
                                </td>

                                <td class="px-6 py-4">
                                    <%= new Date(product.createdAt).toLocaleString('en-GB', { year: 'numeric' ,
                                        month: '2-digit' , day: '2-digit' ,hour: '2-digit' ,minute: '2-digit' ,hour12:
                                        false }) %>

                                </td>
                                <td class="px-6 pb-10 flex space-x-2">

                                    <!-- Product View button -->
                                     <a href="/admin/product/<%=product._id%>">
                                    <button" type="button">
                                        <img src="/Icons/eye.svg" alt=""></button>
                                    </a>

                                
                                    <!--edit button -->
                                        <a href="/admin/products/:productId/edit">
                                        <button class="edit-btn" type="button">
                                            <img src="/Icons/pen.svg" alt="Edit" style="height: 20px;">
                                        </button>
                                    </a>

                                       <!-- edit modal -->
                                       <div id="editProductModal<%= index %>" tabindex="-1" aria-hidden="true"
                                        class="hidden overflow-y-auto fixed top-0 right-0 left-0 z-50 justify-center items-center w-full md:inset-0 h-[calc(100%-1rem)] max-h-full">
                                        <div class="relative p-4 w-full max-w-2xl max-h-[90%]">
                                            <div class="relative bg-white rounded-lg shadow dark:bg-gray-900">
                                                <!-- Modal Header -->
                                                <div
                                                    class="flex items-center justify-between p-4 md:p-5 border-b rounded-t dark:border-gray-600">
                                                    <h3 class="text-lg font-semibold text-gray-900 dark:text-white">
                                                        Update Product
                                                    </h3>
                                                    <button type="button"
                                                        class="text-gray-400 bg-transparent hover:bg-gray-200 hover:text-gray-900 rounded-lg text-sm w-8 h-8 ms-auto inline-flex justify-center items-center dark:hover:bg-gray-600 dark:hover:text-white"
                                                        data-modal-toggle="editProductModal<%= index %>">
                                                        <svg class="w-3 h-3" aria-hidden="true"
                                                            xmlns="http://www.w3.org/2000/svg" fill="none"
                                                            viewBox="0 0 14 14">
                                                            <path stroke="currentColor" stroke-linecap="round"
                                                                stroke-linejoin="round" stroke-width="2"
                                                                d="m1 1 6 6m0 0 6 6M7 7l6-6M7 7l-6 6" />
                                                        </svg>
                                                        <span class="sr-only">Close modal</span>
                                                    </button>
                                                </div>

                                                <!-- Modal Body -->
                                                <form class="p-4 md:p-5" action="/admin/edit-product" method="post"
                                                    enctype="multipart/form-data">
                                                    <!-- Hidden ID -->
                                                    <input type="hidden" name="id" value="<%= product._id %>">

                                                    <!-- Form Fields -->
                                                    <div class="grid gap-4 mb-4 grid-cols-2">
                                                        <div class="col-span-2">
                                                            <label for="productName"
                                                                class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">Name</label>
                                                            <input type="text" name="productName" id="productName"
                                                                value="<%= product.productName %>"
                                                                class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 dark:bg-gray-600 dark:border-gray-500 dark:text-white">
                                                        </div>

                                                        <div class="col-span-2 sm:col-span-1">
                                                            <label for="price"
                                                                class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">Price</label>
                                                            <input type="number" name="price" id="price"
                                                                value="<%= product.price %>"
                                                                class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 dark:bg-gray-600 dark:border-gray-500 dark:placeholder-gray-400 dark:text-white dark:focus:ring-primary-500 dark:focus:border-primary-500"
                                                                placeholder="₹2999" required="">
                                                        </div>
                                                        <div class="col-span-2 sm:col-span-1">
                                                            <label for="Discount"
                                                                class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">Discount
                                                                Percentage (%)</label>
                                                            <input type="number" name="discount" id="discount"
                                                                value="<%= product.discount %>"
                                                                class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 dark:bg-gray-600 dark:border-gray-500 dark:placeholder-gray-400 dark:text-white dark:focus:ring-primary-500 dark:focus:border-primary-500"
                                                                placeholder="0%" required="">
                                                        </div>
                                                        <div class="col-span-2 sm:col-span-1">
                                                            <label for="category"
                                                                class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">Category</label>
                                                            <select id="category" name="category"
                                                                class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full p-2.5 dark:bg-gray-600 dark:border-gray-500 dark:placeholder-gray-400 dark:text-white dark:focus:ring-primary-500 dark:focus:border-primary-500">
                                                                <option value="">Select category</option>
                                                                <% if (categories) { %>
                                                                    <% categories.forEach((category, index)=> { %>
                                                                        <% if (category.isDeleted==false){ %>
                                                                            <option
                                                                                value="<%= category.categoryName %>"
                                                                                <%=product.category===category.categoryName
                                                                                ? 'selected' : '' %>>
                                                                                <%= category.categoryName %>
                                                                            </option>
                                                                            <% } %>
                                                                                <% }) %>
                                                                                    <% } %>


                                                            </select>
                                                        </div>
                                                        <div class="col-span-2 sm:col-span-1">
                                                            <label for="quantity"
                                                                class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">Quantity</label>
                                                            <input type="number" name="quantity" id="quantity"
                                                                value="<%= product.quantity %>"
                                                                class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 dark:bg-gray-600 dark:border-gray-500 dark:placeholder-gray-400 dark:text-white dark:focus:ring-primary-500 dark:focus:border-primary-500"
                                                                placeholder="1" required="">
                                                        </div>
                                                        <div class="col-span-2">
                                                            <label for="description"
                                                                class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">Product
                                                                Description</label>
                                                            <textarea id="description" rows="4" name="description"
                                                                class="block p-2.5 w-full text-sm text-gray-900 bg-gray-50 rounded-lg border border-gray-300 focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-600 dark:border-gray-500 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500"
                                                                placeholder="Write product description here"><%= product.description %></textarea>
                                                        </div>

                                                        <div class="col-span-2 sm:col-span-1">
                                                            <label for="brand"
                                                                class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">Brand</label>
                                                            <input type="text" name="brand" id="brand"
                                                                value="<%= product.brand %>"
                                                                class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 dark:bg-gray-600 dark:border-gray-500 dark:placeholder-gray-400 dark:text-white dark:focus:ring-primary-500 dark:focus:border-primary-500"
                                                                placeholder="samsung,sony,apple" required="">
                                                        </div>
                                                        <div class="col-span-2 sm:col-span-1">
                                                            <label for="model"
                                                                class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">Model</label>
                                                            <input type="text" name="model" id="model"
                                                                value="<%= product.model %>"
                                                                class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 dark:bg-gray-600 dark:border-gray-500 dark:placeholder-gray-400 dark:text-white dark:focus:ring-primary-500 dark:focus:border-primary-500"
                                                                placeholder="galaxyRing,s24ultra" required="">
                                                        </div>


                                                        <div class="col-span-2 sm:col-span-1">
                                                            <label for="Platform"
                                                                class="block mb-2 text-sm font-medium text-gray-900 dark:text-white pb-2">Platform/Os</label>
                                                            <input type="text" name="platform" id="platform"
                                                                value="<%= product.platform || '' %>"
                                                                class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 dark:bg-gray-600 dark:border-gray-500 dark:placeholder-gray-400 dark:text-white dark:focus:ring-primary-500 dark:focus:border-primary-500"
                                                                placeholder="linux" required="">
                                                        </div>

                                                        <div class="col-span-2 sm:col-span-1">
                                                            <label for="additional"
                                                                class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">Additional
                                                                Information</label>
                                                            <input type="text" name="additional" id="additional"
                                                                value="<%= product.additional || '' %>"
                                                                class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 dark:bg-gray-600 dark:border-gray-500 dark:placeholder-gray-400 dark:text-white dark:focus:ring-primary-500 dark:focus:border-primary-500"
                                                                placeholder="Two LCD displays with a resolution of 2064×2208"
                                                                required="">
                                                        </div>

                                                        <div class="col-span-2 sm:col-span-1">
                                                            <label for="return_policy"
                                                                class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">Return
                                                                Policy (days)</label>
                                                            <input type="number" name="returnPeriod"
                                                                value="<%= product.returnPeriod || 0 %>"
                                                                id="return_policy"
                                                                class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 dark:bg-gray-600 dark:border-gray-500 dark:placeholder-gray-400 dark:text-white dark:focus:ring-primary-500 dark:focus:border-primary-500"
                                                                placeholder="0" required="">
                                                        </div>
                                                        <div class="col-span-2 sm:col-span-1">
                                                            <label for="warranty"
                                                                class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">Warranty
                                                                (months)</label>
                                                            <input type="number" name="warranty" id="warranty"
                                                                value="<%= product.warranty || 0 %>"
                                                                class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 dark:bg-gray-600 dark:border-gray-500 dark:placeholder-gray-400 dark:text-white dark:focus:ring-primary-500 dark:focus:border-primary-500"
                                                                placeholder="0" required="">
                                                        </div>

                                                        <label for="description"
                                                            class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">Upload
                                                            product images</label><br>


                                                        <!-- Image Uploading  -->


                                                        <div class="col-span-2">
                                                            <label
                                                                class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">Product
                                                                Images (Max 4)</label>
                                                            <div class="grid grid-cols-2 gap-4">
                                                                <% for (let i=0; i < 4; i++) { %>
                                                                    <div class="w-[300px] relative border-2 border-gray-300 border-dashed rounded-lg p-6"
                                                                        id="dropzone-edit-<%= product._id %>-<%= i %>">

                                                                        <!--Image Input -->
                                                                        <input type="file"
                                                                            class="absolute inset-0 w-full h-full opacity-0 z-50"
                                                                            id="file-upload-input-edit-<%= product._id %>-<%= i %>"
                                                                            name="images"
                                                                            onchange="replaceImagePreview(event, '<%= product._id %>', '<%= i %>')" />
                                                                        <!-- Hidden input to track the specific index -->
                                                                        <input type="hidden" name="imageIndices"
                                                                            value="<%= i %>"
                                                                            id="image-index-<%= product._id %>-<%= i %>" />

                                                                        <!-- Display Existing Image -->
                                                                        <% if (product.images && product.images[i])
                                                                            { %>
                                                                            <div class="text-center">
                                                                                <img id="preview-edit-<%= product._id %>-<%= i %>"
                                                                                    src="<%= product.images[i] %>"
                                                                                    class="mt-4 mx-auto max-h-40 object-cover rounded cursor-pointer"
                                                                                    onclick="triggerFileInput('<%= product._id %>', '<%= i %>')" />
                                                                                <button type="button"
                                                                                    class="absolute top-1 right-1 bg-red-500 text-white text-xs rounded px-1"
                                                                                    onclick="clearImageSlot('<%= product._id %>', '<%= i %>')"></button>
                                                                            </div>
                                                                            <% } else { %>
                                                                                <!-- Placeholder for Empty Slots -->
                                                                                <div class="text-center">
                                                                                    <img class="mx-auto h-12 w-12 opacity-50"
                                                                                        src="https://www.svgrepo.com/show/357902/image-upload.svg"
                                                                                        alt="Upload Icon">
                                                                                    <h3
                                                                                        class="mt-2 text-sm font-medium text-gray-900">
                                                                                        <label
                                                                                            for="file-upload-input-edit-<%= product._id %>-<%= i %>"
                                                                                            class="relative cursor-pointer">
                                                                                            <span>Drag and
                                                                                                drop</span>
                                                                                            <span
                                                                                                class="text-indigo-600">
                                                                                                or browse</span>
                                                                                        </label>
                                                                                    </h3>
                                                                                    <p
