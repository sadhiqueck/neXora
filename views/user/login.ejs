<body id="login-page">


    <main>

        <section class="bg-main-white pt-10 pr-20 pl-20 pb-10 rounded-md ">
            <div class="grid grid-cols-1 lg:grid-cols-2 shadow-lg ">
                <div class="flex items-center justify-center px-4 py-10 bg-white sm:px-6 lg:px-8 sm:py-16 lg:py-24">
                    <div class="xl:w-full xl:max-w-sm 2xl:max-w-md xl:mx-auto">
                        <h2 class="text-3xl font-bold leading-tight text-black sm:text-4xl">Sign in to continue</h2>
                        <p class="mt-2 text-base text-gray-600">Don't have an account ? <a href="/user/signup" title=""
                                class="font-medium text-secondry-button transition-all duration-200 hover:text-button-color hover:underline focus:text-secondry-button">SignUp</a>
                        </p>
                        <p id="mssg" class="text-center pt-4 text-red-600">
                            <% if (typeof mssg !=='undefined' ) { %><%- mssg%>
                                    <% } %>
                        </p>

                        <form action="/user/home" method="POST" class="mt-8">
                            <div class="space-y-5">


                                <div>
                                    <label for="" class="text-base font-medium text-gray-900"> Email address </label>
                                    <div class="mt-2.5">
                                        <input type="text" name="email" id="email" placeholder="Enter registered email"
                                            class="block w-full p-4 text-black placeholder-gray-500 transition-all duration-200 border border-gray-200 rounded-md bg-gray-50 focus:outline-none focus:border-button-color focus:bg-white caret-button-color" />
                                    </div>
                                </div>

                                <div>
                                    <label for="" class="text-base font-medium text-gray-900"> Password </label>
                                    <div class="mt-2.5">
                                        <input type="password" name="password" id="password"
                                            placeholder="Enter your password"
                                            class="block w-full p-4 text-black placeholder-gray-500 transition-all duration-200 border border-gray-200 rounded-md bg-gray-50 focus:outline-none focus:border-button-color focus:bg-white caret-button-color" />
                                    </div>
                                    <div class="pl-2 mt-2 text-sm text-secondry-button">
                                        <a href="/user/forgot-password" >Forgot Password ?</a>
                                    </div>
                                </div>


                                <div class="flex items-center">

                                    <label for="agree" class="ml-3 text-sm font-medium text-gray-500">
                                        By continuing, you agree to Nexora's Conditions of Use and Privacy Notice. <a
                                            href="#" title=""
                                            class="text-button-color hover:text-secondry-button hover:underline">Terms
                                            of
                                            Service</a> and <a href="#" title=""
                                            class="text-button-color hover:text-secondry-button hover:underline">Privacy
                                            Policy</a>
                                    </label>
                                </div>

                                <div>
                                    <button type="submit"
                                        class="inline-flex items-center justify-center w-full px-4 py-4 text-base font-semibold text-white transition-all duration-200 bg-button-color border border-transparent rounded-lg focus:outline-none hover:bg-secondry-button focus:bg-secondry-button">
                                        Sign In
                                    </button>
                                </div>
                            </div>
                        </form>

                        <div class="mt-3 space-y-3">
                            <div class="flex items-center mt-3 space-y-3">
                                <div class="w-full h-0.5 bg-gray-200 dark:bg-gray-700"></div>
                                <div class="px-5 text-center text-gray-500 dark:text-gray-400">or</div>
                                <div class="w-full h-0.5 bg-gray-200 dark:bg-gray-700"></div>
                            </div>

                            <button onclick="window.location.href='/user/auth/google'"
                                class=" relative inline-flex items-center justify-center w-full px-4 py-4 text-base font-semibold text-gray-700 transition-all duration-200 bg-white border-2 border-gray-200 rounded-lg hover:bg-gray-100 focus:bg-gray-100 hover:text-black focus:text-black focus:outline-none "
                                type="submit">
                                <svg class="w-5 h-5 mr-2" viewBox="0 0 21 20" fill="none"
                                    xmlns="http://www.w3.org/2000/svg">
                                    <g clip-path="url(#clip0_13183_10121)">
                                        <path
                                            d="M20.3081 10.2303C20.3081 9.55056 20.253 8.86711 20.1354 8.19836H10.7031V12.0492H16.1046C15.8804 13.2911 15.1602 14.3898 14.1057 15.0879V17.5866H17.3282C19.2205 15.8449 20.3081 13.2728 20.3081 10.2303Z"
                                            fill="#3F83F8"></path>

                                        <path
                                            d="M10.7019 20.0006C13.3989 20.0006 15.6734 19.1151 17.3306 17.5865L14.1081 15.0879C13.2115 15.6979 12.0541 16.0433 10.7056 16.0433C8.09669 16.0433 5.88468 14.2832 5.091 11.9169H1.76562V14.4927C3.46322 17.8695 6.92087 20.0006 10.7019 20.0006V20.0006Z"
                                            fill="#34A853"></path>
                                        <path
                                            d="M5.08857 11.9169C4.66969 10.6749 4.66969 9.33008 5.08857 8.08811V5.51233H1.76688C0.348541 8.33798 0.348541 11.667 1.76688 14.4927L5.08857 11.9169V11.9169Z"
                                            fill="#FBBC04"></path>
                                        <path
                                            d="M10.7019 3.95805C12.1276 3.936 13.5055 4.47247 14.538 5.45722L17.393 2.60218C15.5852 0.904587 13.1858 -0.0287217 10.7019 0.000673888C6.92087 0.000673888 3.46322 2.13185 1.76562 5.51234L5.08732 8.08813C5.87733 5.71811 8.09302 3.95805 10.7019 3.95805V3.95805Z"
                                            fill="#EA4335"></path>
                                    </g>
                                    <defs>
                                        <clipPath id="clip0_13183_10121">
                                            <rect width="20" height="20" fill="white" transform="translate(0.5)"></rect>
                                        </clipPath>
                                    </defs>
                                </svg>
                                Sign in using Google
                            </button>

                        </div>
                    </div>
                </div>

                <div class="flex items-center justify-center px-4 py-10 sm:py-16 lg:py-24 bg-white sm:px-6 lg:px-8">
                    <div>
                        <img class="w-auto mx-auto rounded-lg " src="/Images/signup_cover.jpg" alt="" />

                    </div>
                </div>
            </div>
        </section>


    </main>
    <script src="https://accounts.google.com/gsi/client" async defer></script>
</body>