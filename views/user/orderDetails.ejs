<script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/js/all.min.js"></script>


<div class="container mx-auto px-4 py-8 max-w-[80%] ">
    <!-- breadcrumb -->

    <div class="mb-4 items-end justify-between space-y-4 sm:flex sm:space-y-0 md:mb-8 pl-4 pr-20 pt-6">
        <div>
            <nav class="flex" aria-label="Breadcrumb">
                <ol class="inline-flex items-center space-x-1 md:space-x-2 rtl:space-x-reverse">
                    <li class="inline-flex items-center">
                        <a href="/user/home"
                            class="inline-flex items-center text-sm font-medium text-gray-500 hover:text-primary-600 dark:text-gray-400 dark:hover:text-white">
                            <svg class="me-2.5 h-3 w-3" aria-hidden="true" xmlns="http://www.w3.org/2000/svg"
                                fill="currentColor" viewBox="0 0 20 20">
                                <path
                                    d="m19.707 9.293-2-2-7-7a1 1 0 0 0-1.414 0l-7 7-2 2a1 1 0 0 0 1.414 1.414L2 10.414V18a2 2 0 0 0 2 2h3a1 1 0 0 0 1-1v-4a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1v4a1 1 0 0 0 1 1h3a2 2 0 0 0 2-2v-7.586l.293.293a1 1 0 0 0 1.414-1.414Z" />
                            </svg>
                            Home
                        </a>
                    </li>

                    <li aria-current="page">
                        <div class="flex items-center">
                            <svg class="h-5 w-5 text-gray-400 rtl:rotate-180" aria-hidden="true"
                                xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="none"
                                viewBox="0 0 24 24">
                                <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round"
                                    stroke-width="2" d="m9 5 7 7-7 7" />
                            </svg>
                            <a href="/user/orders"
                                class="ms-1 text-sm font-medium text-gray-500 dark:text-gray-400 md:ms-2">
                                Orders
                            </a>
                        </div>
                    </li>
                    <li aria-current="page">
                        <div class="flex items-center">
                            <svg class="h-5 w-5 text-gray-400 rtl:rotate-180" aria-hidden="true"
                                xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="none"
                                viewBox="0 0 24 24">
                                <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round"
                                    stroke-width="2" d="m9 5 7 7-7 7" />
                            </svg>
                            <span class="ms-1 text-sm font-medium text-gray-700 md:ms-2">
                                <%=order.orderNumber %>
                            </span>
                        </div>
                    </li>
                </ol>
            </nav>

        </div>

    </div>

    <!-- Order Header -->
    <div class="bg-white rounded-lg shadow-sm p-6 mb-6">
        <div class="flex flex-wrap justify-between items-start gap-4">
            <div>
                <div class="flex items-center gap-3">
                    <h1
                        class="text-2xl font-semibold <%= order.status === 'Cancelled' ? 'text-gray-500' : 'text-gray-800' %>">
                        Order <span class="text-xl">#<%= order.orderNumber %></span>
                    </h1>
                    <% if(order.status==='Cancelled' ) { %>
                        <div class="relative inline-flex items-center">

                            <span
                                class="relative inline-flex items-center gap-1.5 px-3 py-1 rounded-full bg-red-50 text-red-600 border border-red-200 shadow-sm">
                                <span class="h-1.5 w-1.5 rounded-full bg-red-500"></span>
                                <span class="text-sm font-semibold tracking-wide">Order Cancelled</span>
                            </span>
                        </div>
                        <% } %>
                </div>
                <p class="text-gray-500 mt-1">Placed on <%= order.orderDate.toLocaleString('en-IN',{ year:'numeric',
                        month:'short', day:'numeric', }) %>
                </p>
            </div>
            <div class="flex gap-3">
                <% if(order.status !=='Cancelled' ){ %>
                    <button onclick="downloadInvoice('<%= order._id %>')"
                        class="inline-flex items-center px-4 py-2 bg-gray-100 hover:bg-gray-200 text-gray-700 rounded-lg">
                        <i class="fas fa-download mr-2"></i>
                        Download Invoice
                    </button>
                    <% } %>
                        <!-- cancel order button -->

                        <% if((order.status==='Pending' ||order.status==='Processing' || order.status==='Shipped' ) &&
                            isCancelable ) { %>
                            <button id="orderCancelBtn"
                                class="inline-flex items-center px-4 py-2 bg-red-50 hover:bg-red-100 text-red-600 rounded-lg">
                                <i class="fas fa-times mr-2"></i>
                                Cancel Order
                            </button>
                            <% } else if(isOrderReturnable){%>
                                <button id="orderReturnBtn" data-modal-target="returnOrderModal"
                                    data-modal-toggle="returnOrderModal"
                                    class="inline-flex items-center px-4 py-2 bg-green-50 hover:bg-green-100 text-green-600 rounded-lg">
                                    <i class="fas fa-undo pr-2"></i>
                                    Return Order
                                </button>
                                <% } %>
            </div>
        </div>

        <!-- Order Progress -->
        <div class="mt-8 <%=  order.status === 'Cancelled' ? 'opacity-75' : '' %>">
            <div class="flex items-center justify-between mb-4">
                <div class="flex items-center">
                    <span
                        class="w-8 h-8 <%= order.status === 'Cancelled' ? 'bg-gray-400' : 'bg-secondry-button' %> text-white rounded-full flex items-center justify-center">
                        <i class="fas <%= order.status === 'Cancelled' ? 'fa-times' : 'fa-check' %>"></i>
                    </span>
                    <div class="ml-3">
                        <p class="font-medium">Order <%= order.status==='Cancelled' ? 'Cancelled' : 'Confirmed' %>
                        </p>
                        <%= order.orderDate.toLocaleString('en-IN', { month: 'short' , day: 'numeric' , hour: '2-digit'
                            , minute: '2-digit' }) %>
                    </div>
                </div>

                <!-- shipped -->
                <div class="flex items-center">
                    <span
                        class="w-8 h-8 rounded-full flex items-center justify-center text-white <%= order.status === 'Shipped' || order.status === 'Out for delivery' || order.status === 'Delivered' || order.status==='Returned' ? 'bg-secondry-button' : 'bg-gray-400' %>">
                        <i class="fas fa-truck-fast"></i>
                    </span>
                    <div class="ml-3">
                        <p class="font-medium">Shipped</p>
                        <p class="text-sm text-gray-500">
                            <%=order.status==='Shipped' || order.status==='Out for delivery' ||
                                order.status==='Delivered' || order.status==='Returned' ?
                                order.shippedDate.toLocaleString('en-IN', { month: 'short' , day: 'numeric' ,
                                hour: '2-digit' , minute: '2-digit' }) :'---' %>
                        </p>
                    </div>
                </div>
                <!-- out for delivery -->
                <div class="flex items-center">
                    <span
                        class="w-8 h-8 rounded-full flex items-center justify-center text-white <%= order.status === 'Out for delivery' || order.status === 'Delivered' || order.status==='Returned' ? 'bg-secondry-button' : 'bg-gray-400' %>">
                        <i class="fas fa-motorcycle"></i>
                    </span>
                    <div class="ml-3">
                        <p class="font-medium">Out for Delivery</p>
                        <p class="text-sm text-gray-500">
                            <%= order.status==='Out for delivery' || order.status==='Delivered' ||
                                order.status==='Returned' ? (order.deliveredDate.toLocaleString('en-IN', {
                                month: 'short' , day: 'numeric' , hour: '2-digit' , minute: '2-digit' })) :'---' %>
                        </p>
                    </div>
                </div>
                <div class="flex items-center">
                    <span
                        class="w-8 h-8 rounded-full flex items-center justify-center text-white <%= order.status=== 'Delivered' || order.status==='Returned' ? 'bg-secondry-button' : 'bg-gray-400  ' %>">
                        <i class="fas fa-flag"></i>
                    </span>
                    <div class="ml-3">
                        <p class="font-medium">Delivered</p>
                        <p class="text-sm text-gray-500">
                            <%= order.status==='Delivered' || order.status==='Returned' ?
                                (order.deliveredDate.toLocaleString('en-IN', { month: 'short' , day: 'numeric' ,
                                hour: '2-digit' , minute: '2-digit' })) :'---' %>
                        </p>
                    </div>
                </div>
            </div>
            <div class="relative pt-1">
                <div class="flex mb-2 items-center justify-between">
                    <div class="w-full bg-gray-200 rounded-full h-2">
                        <div class="<%= order.status==='Cancelled' ? 'bg-red-500'  : 'bg-secondry-button'   %> h-2 rounded-full w-1/4 <% if(order.status==='Shipped'){ %>
                                w-2/4
                            <% }else if(order.status==='Out for delivery'){ %> 
                                 w-3/4
                            <% }else if(order.status==='Delivered' ||  order.status==='Returned'){ %> 
                                w-full
                                <% } %>">
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- cancel reason -->
        <h2 class="mt-6 text-lg italic text-red-600">
            <%= (order.status==='Cancelled' && order.cancelDescription) ? `Cancelled by admin! [ Reason :
                ${order?.cancelDescription}]`: '' %>
        </h2>
    </div>
    <!-- orders -->
    <div class="bg-white rounded-lg shadow-sm overflow-hidden mb-6">
        <div class="p-6">
            <h2 class="text-lg font-semibold text-gray-800 mb-4">Order Items</h2>
        </div>
        <div class="border-t border-gray-100">
            <% order.products.forEach(product=>{ %>

                <!-- Items -->
                <div class="flex flex-col space-y-4 border-b border-gray-200 pb-3 p-6">
                    <div
                        class="flex items-start space-x-4 <%= product.status === 'Cancelled' ? 'opacity-75 bg-gray-50' : '' %>">
                        <img src="<%=product.images %>" alt="Product"
                            class="w-20 h-18 rounded-lg object-fit bg-gray-100 p-1 <%= product.status === 'Cancelled' ? 'filter grayscale' : '' %>" />
                        <div class="flex-1 min-w-0">
                            <div class="flex items-center justify-between">
                                <div class="flex gap-4">
                                    <h3
                                        class="text-sm pt-1 font-medium <%= product.status === 'Cancelled' ? 'text-gray-500' : 'text-gray-900' %>">
                                        <%=product.productName %>
                                    </h3>
                                    <!-- delivery Status -->
                                    <div class="items-start ">
                                        <div class="text-right">
                                            <% if (product.status==='Cancelled' ) { %>
                                                <div class="relative inline-flex items-center">
                                                    <span class="absolute rounded-full bg-red-200 opacity-75"></span>
                                                    <span
                                                        class="relative inline-flex items-center gap-1.5 px-3 py-1 rounded-full bg-red-50 text-red-700 border border-red-200 shadow-sm">
                                                        <span class="h-1.5 w-1.5 rounded-full bg-red-500"></span>
                                                        <span
                                                            class="text-xs font-semibold tracking-wide">Cancelled</span>
                                                        <% if(order.paymentMethod !=='COD' ) {%>
                                                            <span class="text-xs font-semibold tracking-wide">, Payment
                                                                Refunded to your wallet</span>
                                                            <a href="/user/wallet"
                                                                class="underline text-xs text-blue-600">Go to Wallet</a>
                                                            <% } %>
                                                    </span>
                                                </div>
                                                <% } else if (product.status==='Delivered' ) { %>
                                                    <div class="relative inline-flex items-center">
                                                        <span
                                                            class="relative inline-flex items-center gap-1.5 px-3 py-1 rounded-full bg-green-50 text-green-700 border border-green-200 shadow-sm">
                                                            <span class="h-1.5 w-1.5 rounded-full bg-green-500"></span>
                                                            <span class="text-xs font-semibold tracking-wide">
                                                                Delivered on <%=
                                                                    order.deliveredDate.toLocaleDateString('en-IN',{dateStyle:'medium'})
                                                                    %>
                                                            </span>
                                                        </span>
                                                    </div>
                                                    <% } else if (product.status==='Shipped' ) { %>
                                                        <div class="relative inline-flex items-center">
                                                            <span
                                                                class="absolute rounded-full bg-indigo-200 opacity-75"></span>
                                                            <span
                                                                class="relative inline-flex items-center gap-1.5 px-3 py-1 rounded-full bg-indigo-50 text-indigo-700 border border-indigo-200 shadow-sm">
                                                                <span
                                                                    class="h-1.5 w-1.5 rounded-full bg-indigo-500"></span>
                                                                <span
                                                                    class="text-xs font-semibold tracking-wide">Shipped</span>
                                                            </span>
                                                        </div>
                                                        <% } else if (product.status==='Out for delivery' ) { %>
                                                            <div class="relative inline-flex items-center">
                                                                <span
                                                                    class="absolute rounded-full bg-yellow-200 opacity-75"></span>
                                                                <span
                                                                    class="relative inline-flex items-center gap-1.5 px-3 py-1 rounded-full bg-yellow-50 text-yellow-700 border border-yellow-200 shadow-sm">
                                                                    <span
                                                                        class="h-1.5 w-1.5 rounded-full bg-yellow-500"></span>
                                                                    <span
                                                                        class="text-xs font-semibold tracking-wide">Out
                                                                        for Delivery</span>
                                                                </span>
                                                            </div>
                                                            <% }else if (product.status==='Returned' ) { %>
                                                                <div class="relative inline-flex items-center">
                                                                    <span
                                                                        class="absolute rounded-full bg-purple-200-200 opacity-75"></span>
                                                                    <span
                                                                        class="relative inline-flex items-center gap-1.5 px-3 py-1 rounded-full bg-purple-50 text-purple-700 border border-purple-200 shadow-sm">
                                                                        <span
                                                                            class="h-1.5 w-1.5 rounded-full bg-purple-500"></span>
                                                                        <span
                                                                            class="text-xs font-semibold tracking-wide">Item
                                                                            Returned </span>
                                                                        <% if(product.paymentStatus==='Refunded' ) {%>
                                                                            <span
                                                                                class="text-xs font-semibold tracking-wide">,
                                                                                Payment
                                                                                Refunded to your wallet</span>
                                                                            <a href="/user/wallet"
                                                                                class="underline text-xs text-blue-600">Go
                                                                                to Wallet</a>
                                                                            <% } %>
                                                                    </span>
                                                                </div>
                                                                <% } else { %>
                                                                    <div class="text-indigo-600">Processing</div>
                                                                    <% } %>
                                        </div>
                                    </div>
                                </div>

                            </div>
                            <p class="text-gray-500 text-sm">Model: <%=product.model %>
                            </p>

                            <p class="text-gray-500 text-sm mt-1">
                                Color: <%= product.variant.color %>
                                    <%= product.variant.storage ? '| Size: ' + product.variant.storage : '' %>
                            </p>
                            <p class="text-sm text-gray-500 mt-1">Quantity: <%=product.quantity %>
                            </p>
                            <div class="mt-4 flex gap-10">
                                <!-- expected delivery date -->
                                <% if(product?.status!=='Delivered' && product?.status!=='Returned' &&
                                    product?.status!=='Out for delivery' ){ %>
                                    <p
                                        class="text-sm <%= product.status === 'Cancelled' ? 'text-gray-500 line-through' : 'text-secondry-button' %> font-semibold">
                                        <i class="fas fa-truck mr-2"></i>
                                        Item will be delivered by <%= product.deliveryDate.toLocaleString('en-IN',{
                                            year:'numeric',month:'short', day:'numeric', }) %>
                                    </p>

                                    <% } %>
                            </div>
                        </div>
                        <div class="text-right space-y-1">
                            <p
                                class="text-sm font-medium <%= product.status === 'Cancelled' ? 'text-gray-500 line-through' : 'text-gray-900' %>">
                                <%= product.discountedPrice.toLocaleString('en-IN',{style:'currency',currency:"INR"}) %>
                            </p>
                            <p class="text-xs text-gray-500">per unit</p>
                            <p class="text-xs text-gray-500">Return Period:<%= product.returnPeriod < 1
                                    ? "No return Policy for this product" : `${product.returnPeriod} days` %>
                            </p>
                            <p class="text-xs text-gray-500 pb-3">Warranty: <%=product.warranty %> months</p>
                            <!-- cancel button -->
                            <div class="flex justify-end">
                                <% if(product.status==='Shipped' || product.status==='Processing' ) { %>
                                    <button data-product-id="<%= product._id %>"
                                        class="cancelItem text-red-500 underline hover:text-red-600 text-sm font-inter font-semibold">
                                        <i class="fas fa-times"></i>
                                        Cancel Item
                                    </button>
                                    <% } %>
                                        <% if(product.isReturnable){ %>
                                            <button data-product-id="<%= product._id %>" {%>
                                                <button id="orderReturnBtn" data-modal-target="returnOrderModal"
                                                    data-modal-toggle="returnOrderModal"
                                                    class="returnItem underline flex items-center gap-1 text-green-500 hover:text-green-600 text-sm font-inter font-semibold">
                                                    <i class="fas fa-undo"></i>
                                                    Return Item
                                                </button>
                                                <% } %>
                            </div>
                        </div>
                    </div>
                </div>
                <% }) %>
        </div>
    </div>

    <!-- Order Summary -->
    <div class="bg-white rounded-lg shadow-sm p-6 mb-6 ">
        <h2 class="text-lg font-semibold text-gray-800 mb-4">Order Summary</h2>
        <div class="space-y-3">
            <div class="flex justify-between text-gray-600">
                <span class="text-gray-700">Subtotal</span>
                <span>
                    <%=order.originalTotal.toLocaleString('en-IN',{style:'currency', currency:'INR'})%>
                </span>
            </div>
            <div class="flex justify-between text-gray-600">
                <span>Discounts</span>
                <span>
                    <%= order.totalSavings.toLocaleString('en-IN',{style:'currency', currency:'INR'}) %>
                </span>
            </div>
            <div class="flex justify-between text-gray-600">
                <span>Delivery Charge</span>
                <span>
                    <%= order.deliveryCharge.toLocaleString('en-IN',{style:'currency', currency:'INR'}) %>
                </span>
            </div>
            <div class="flex justify-between text-gray-600">
                <span>Tax/GST</span>
                <span>
                    <%= order.tax.toLocaleString('en-IN',{style:'currency', currency:'INR'}) %>
                </span>
            </div>
            <div class="flex justify-between text-green-600">
                <span>Coupon Discount</span>
                <span>-<%= order.couponApplied ?
                        order.couponApplied?.discount.toLocaleString('en-IN',{style:'currency',currency:'INR'}) : 0 %>
                        </span>
            </div>
            <div class="border-t pt-3 mt-3">
                <div class="flex justify-between font-semibold text-lg">
                    <span>Total</span>
                    <span>
                        <%= order.total.toLocaleString('en-IN',{style:'currency', currency:'INR'}) %>
                    </span>
                </div>
            </div>
            <div class="mt-4 text-sm">
                <% if(order.couponApplied.code){ %>
                    <p class="text-green-600 ">
                        <i class="fas fa-tag mr-2"></i>Coupon Code:<span class="font-medium">
                            <%= order.couponApplied?.code %>
                        </span>
                    </p>
                    <% } %>
            </div>
        </div>
    </div>

    <!-- Shipping & Payment Info -->
    <div class="grid md:grid-cols-2 gap-6 shadow-md rounded-lg">
        <div class="bg-white rounded-lg shadow-sm p-6">
            <h2 class="text-lg font-semibold text-gray-800 mb-4">Shipping Address</h2>
            <div class="text-gray-600">
                <p class="font-medium">
                    <%= order.shippingAddress.fullName %>
                </p>
                <p>
                    <%= order.shippingAddress.addressLine1 %>,
                </p>
                <p>
                    <%= order.shippingAddress.addressLine2 %>,<%= order.shippingAddress.landmark %>
                </p>
                <p>
                    <%= order.shippingAddress.city %>, <%= order.shippingAddress.state %>
                            - <%= order.shippingAddress.pincode %>
                </p>
                <p>India</p>
                <p class="mt-2">+91 <%= order.shippingAddress.phone %>
                </p>
                <p>
                    <%= user.email %>
                </p>
            </div>
        </div>

        <div class="bg-white rounded-lg shadow-sm p-6">
            <h2 class="text-lg font-semibold text-gray-800 mb-4">Payment Info</h2>
            <div class="bg-white rounded-lg p-4">
                <div class="flex items-center justify-between mb-4">
                    <div class="flex items-center space-x-3">
                        <svg class="w-6 h-6 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                d="M17 9V7a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2m2 4h10a2 2 0 002-2v-6a2 2 0 00-2-2H9a2 2 0 00-2 2v6a2 2 0 002 2zm7-5a2 2 0 11-4 0 2 2 0 014 0z">
                            </path>
                        </svg>
                        <div>
                            <p class="font-medium text-gray-900 uppercase">
                                <%= order.paymentMethod %>
                            </p>
                        </div>
                    </div>
                    <div class="flex items-center space-x-2">
                        <span>Payment Status: </span>
                        <% if (order.paymentMethod==="COD" ) { %>
                            <span
                                class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-indigo-100 text-indigo-800">
                                COD
                            </span>
                            <% } else if (order.paymentStatus==="Pending" ) { %>
                                <span
                                    class="px-2 py-1 text-xs rounded-full bg-orange-100 text-orange-800">Pending</span>
                                <% } else if (order.paymentStatus==="Completed" ) { %>
                                    <span
                                        class="px-2 py-1 text-xs rounded-full bg-green-100 text-green-800">Completed</span>
                                    <% } else if (order.paymentStatus==="Refunded" ){%>
                                        <span
                                            class="px-2 py-1 text-xs rounded-full bg-red-100 text-red-800">Refunded</span>
                                        <% } else{%>
                                            <span
                                                class="px-2 py-1 text-xs rounded-full bg-red-100 text-red-800">Partially
                                                Refunded</span>
                                            <% } %>
                    </div>
                </div>
                <div class="text-sm text-gray-600">
                    <p class="mb-1">Transaction ID: <%= order?.transactionID %>
                    </p>
                    <p>Processed on <%= order.orderDate.toLocaleString('en-IN', { dateStyle: 'long' , timeStyle: 'short'
                            }) %>
                    </p>

                    </p>
                </div>
            </div>
        </div>

    </div>
</div>
</div>


<!-- Need Help Section -->
<div class="mt-8 text-center mb-10">
    <h3 class="font-medium text-gray-800 mb-2">Need Help?</h3>
    <p class="text-gray-600 mb-4">We're here to help you with any questions about your order</p>
    <div class="flex justify-center gap-4">
        <!-- WhatsApp Button -->
        <a href="https://wa.me/918590965329?text=Hello,%20I%20need%20help%20with%20my%20order" target="_blank"
            class="inline-flex items-center px-4 py-2 bg-gray-100 hover:bg-gray-200 text-gray-700 rounded-lg"
            rel="noopener noreferrer">
            <i class="fas fa-comment-alt mr-2"></i>
            Chat with Us
        </a>

        <!-- Email Support Button -->
        <a href="mailto:nexoraproject@gmail.com?subject=Support%20Needed&body=Hello,%20I%20need%20help%20with%20my%20order"
            class="inline-flex items-center px-4 py-2 bg-gray-100 hover:bg-gray-200 text-gray-700 rounded-lg">
            <i class="fas fa-envelope mr-2"></i>
            Email Support
        </a>
    </div>
</div>

<!-- Return reason Modal -->

<div id="returnOrderModal"
    class=" hidden overflow-y-auto overflow-x-hidden  fixed top-0 right-0 left-0 z-50 justify-center items-center w-full md:inset-0 h-[calc(100%-1rem)] max-h-full ">
    <div class="bg-white rounded-lg shadow-lg w-11/12 md:w-1/2 lg:w-1/3 p-6">
        <!-- Modal Header -->
        <div class="flex justify-between items-center mb-4">
            <h3 class="text-xl font-semibold">Return Order</h3>
            <button data-modal-hide="returnOrderModal" class="text-gray-500 hover:text-gray-700 ">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24"
                    stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                </svg>
            </button>
        </div>

        <!-- Modal Body -->
        <div class="mb-6 flex flex-col gap-2  ">
            <label for="reasonOptions">Select a Reason</label>
            <select name="reasonOption" id="reasonOptions"
                class="rounded-md p-2 shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm">
                <option value="" disabled selected>Select Reason for Return</option>
                <option value="Defective or Damaged Product">Defective or Damaged Product</option>
                <option value="Wrong Item Received">Wrong Item Received </option>
                <option value="Item Not as Described">Item Not as Described</option>
                <option value="Ordered by Mistake">Ordered by Mistake</option>
                <option value="Changed My Mind">Changed My Mind</option>
                <option value="Better Price Available">Better Price Available</option>
                <option value="Late Delivery">Late Delivery</option>
                <option value="Not Compatible">Not Compatible</option>
                <option value="Other">Other</option>
            </select>
        </div>

        <div class="mb-4">
            <label for="reasonDescription" class="block text-sm font-medium text-gray-700">Description
                (Optional)</label>
            <textarea id="reasonDescription" rows="4" required
                class="mt-1 block w-full p-2 border border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm"
                placeholder="Enter the reason for Return"></textarea>
        </div>

        <!-- Modal Footer -->
        <div class="flex justify-end space-x-3">
            <button data-modal-hide="returnOrderModal" type="reset"
                class="bg-gray-300 text-gray-700 px-4 py-2 rounded-lg hover:bg-gray-400">
                Cancel
            </button>
            <button class="confirmReturnBtn bg-green-500 text-white px-4 py-2 rounded-lg hover:bg-green-600">
                Confirm Return
            </button>
        </div>
    </div>
</div>

</div>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jspdf/2.5.1/jspdf.umd.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/html2canvas/1.4.1/html2canvas.min.js"></script>
<script>



    document.addEventListener('DOMContentLoaded', () => {

        const cancelItemBtns = document.querySelectorAll('.cancelItem');
        let currentProductId = null;
        const returnOrderModal = document.getElementById('returnOrderModal');
        const returnReasonSelect = document.getElementById('reasonOptions');
        const returnDescriptionTextarea = document.getElementById('reasonDescription');
        const confirmReturnBtn = document.querySelector('.confirmReturnBtn')

        cancelItemBtns.forEach(button => {

            button.addEventListener('click', async () => {
                try {
                    const orderId = '<%=order._id %>'
                    const productId = button.getAttribute('data-product-id');
                    // Confirm and process cancellation
                    const result = await Swal.fire({
                        title: 'Are you sure?',
                        text: "You want to cancel this product?",
                        icon: 'warning',
                        showCancelButton: true,
                        confirmButtonColor: '#EF4444',
                        cancelButtonColor: '#6B7280',
                        confirmButtonText: 'Yes, cancel it!'
                    });
                    if (result.isConfirmed) {

                        const response = await fetch('/user/order/cancel-item', {
                            method: "POST",
                            headers: { "Content-Type": "application/json" },
                            body: JSON.stringify({ orderId, productId })
                        });

                        const data = await response.json();

                        if (response.ok && data.success) {
                            notyf.success('Product cancelled succesfully');
                            setTimeout(() => {
                                window.location.reload();
                            }, 500);
                        }
                        else {
                            notyf.error(data.message)
                        }
                    }
                } catch (error) {
                    console.log(error);
                    notyf.error(error.message || "Failed to cancel")
                }
            })
        })

        // cancel entire order

        const cancelOrderBtn = document.getElementById('orderCancelBtn');

        cancelOrderBtn?.addEventListener('click', async () => {
            try {
                const orderId = '<%=order._id %>'
                // Confirm and process cancellation
                const result = await Swal.fire({
                    title: 'Are you sure?',
                    text: "You want to cancel this Order?",
                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonColor: '#EF4444',
                    cancelButtonColor: '#6B7280',
                    confirmButtonText: 'Yes, cancel Order!'
                });
                if (result.isConfirmed) {

                    const response = await fetch('/user/order/cancel', {
                        method: "POST",
                        headers: {
                            "Content-Type": "application/json"
                        },
                        body: JSON.stringify({ orderId })
                    })

                    const data = await response.json();

                    if (response.ok && data.success) {

                        notyf.success("Order Cancelled Succesfully");
                        setTimeout(() => {
                            window.location.reload()
                        }, 500);

                    } else {
                        throw new Error(data.error)
                    }
                }
            } catch (error) {
                console.log(error);
                notyf.error(error.message || "Failed to cancel")
            }
        })



        // Single event listener for confirm button
        confirmReturnBtn.addEventListener('click', async () => {
            console.log('fnkjasfnbksd')
            const reason = returnReasonSelect.value;
            const description = returnDescriptionTextarea.value;
            const orderId = '<%=order._id %>';

            try {
                let endpoint = '/user/order/return';
                let body = { orderId, reason, description };

                if (currentProductId) {
                    endpoint = '/user/order/return-item';
                    body.productId = currentProductId;
                }

                console.log(endpoint);
                console.log(body)

                const response = await fetch(endpoint, {
                    method: "POST",
                    headers: { "Content-Type": "application/json" },
                    body: JSON.stringify(body)
                });

                const data = await response.json();

                if (response.ok && data.success) {
                    notyf.success(`Return request submitted successfully`);
                    setTimeout(() => window.location.reload(), 500);
                } else {
                    throw new Error(data.error);
                }
            } catch (error) {
                notyf.error(error.message || "Failed to submit return request");
            } finally {
                // returnOrderModal.classList.add('hidden');
                currentProductId = null;
            }
        });

        // Order return button handler
        document.getElementById('orderReturnBtn')?.addEventListener('click', () => {
            currentProductId = null;
            // returnOrderModal.classList.remove('hidden');
        });

        // Item return buttons handler
        document.querySelectorAll('.returnItem').forEach(button => {
            button.addEventListener('click', () => {
                currentProductId = button.getAttribute('data-product-id');
                // returnOrderModal.classList.remove('hidden');
            });
        });

        // Reset modal state when closed
        returnOrderModal.querySelector('[data-modal-hide]').addEventListener('click', () => {
            returnReasonSelect.value = '';
            returnDescriptionTextarea.value = '';
            currentProductId = null;
        });
    })

    async function downloadInvoice(orderId) {
        try {

            notyf.success('Downloading...')
            // Fetch order details
            const response = await fetch(`/user/order/${orderId}/invoice`);
            const order = await response.json();

            // Create invoice HTML
            const invoiceHtml = `
        <div style="font-family: Arial, sans-serif; padding: 40px;">
            <!-- Header -->
            <div style="text-align: center; margin-bottom: 20px;">
                <img src="/Images/LOGO.png" alt="Company Logo" style="width: 150px; height: auto;">
                <h1 style="font-size: 24px; margin: 10px 0;">Invoice</h1>
            </div>

            <!-- Order and Customer Details -->
            <div style="margin-bottom: 20px;">
                <div style="display: flex; justify-content: space-between;">
                    <div>
                        <h2 style="font-size: 18px; margin-bottom: 10px;">Order Details</h2>
                        <p><strong>Order ID:</strong> ${order.orderNumber}</p>
                        <p><strong>Order Date:</strong> ${new Date(order.orderDate).toLocaleDateString()}</p>
                    </div>
                    <div>
                        <h2 style="font-size: 18px; margin-bottom: 10px;">Customer Details</h2>
                        <p><strong>Name:</strong> ${order.userId?.username || 'Guest'}</p>
                        <p><strong>Email:</strong> ${order.userId?.email || 'N/A'}</p>
                    </div>
                </div>
            </div>

            <!-- Shipping and Billing Addresses -->
            <div style="display: flex; justify-content: space-between; margin-bottom: 20px;">
                <div>
                    <h2 style="font-size: 18px; margin-bottom:10px ;"><b>Shipping Address</b></h2>
                    <p>${order.shippingAddress.fullName}</p>
                    <p>${order.shippingAddress.addressLine1}</p>
                    <p>${order.shippingAddress.addressLine2},${order.shippingAddress.landmark},
                     ${order.shippingAddress.city},${order.shippingAddress.state} ${order.shippingAddress.pincode}</p>
                    <p>India</p>
                </div>
                <div>
                    <h2 style="font-size: 18px; margin-bottom: 10px font-bold;"><b>Billing Address</b></h2>
                    <p>${order.userId?.username}</p>
                    <p>${order.shippingAddress.addressLine1}</p>
                    <p>${order.shippingAddress.addressLine2}, ${order.shippingAddress.state} ${order.shippingAddress.pincode}</p>
                    <p>India</p>
                </div>
            </div>

            <!-- Order Items Table -->
            <table style="width: 100%; border-collapse: collapse; margin-bottom: 20px;">
                <thead>
                    <tr style="background-color: #f3f4f6;">
                        <th style="padding: 10px; border: 1px solid #ddd;">Product</th>
                        <th style="padding: 10px; border: 1px solid #ddd;">Quantity</th>
                        <th style="padding: 10px; border: 1px solid #ddd;">Price</th>
                        <th style="padding: 10px; border: 1px solid #ddd;">Discount</th>
                        <th style="padding: 10px; border: 1px solid #ddd;">Tax(GST)</th>
                        <th style="padding: 10px; border: 1px solid #ddd;">Total</th>
                    </tr>
                </thead>
                <tbody>
                    ${order.products.map(item =>
                ` <tr>
                            <td style="padding: 10px; border: 1px solid #ddd;">${item.productName}- ${item.model}</td>
                            <td style="padding: 10px; border: 1px solid #ddd;">${item.quantity}</td>
                            <td style="padding: 10px; border: 1px solid #ddd;">₹${(item.price * 82 / 100).toFixed(2)}</td>
                            <td style="padding: 10px; border: 1px solid #ddd;">-₹${(item.price - item.discountedPrice).toFixed(2)}</td>
                            <td style="padding: 10px; border: 1px solid #ddd;">₹${(item.price * 18 / 100).toFixed(2)} (18%)</td>
                            <td style="padding: 10px; border: 1px solid #ddd;">₹${(item.quantity * item.discountedPrice).toFixed(2)}</td>
                        </tr>
                        
                    `).join('')}
                </tbody>
            </table>

            <!-- Order Summary -->
            <div style="text-align: right;">
                <p><strong>Subtotal:</strong> ₹${order.originalTotal.toFixed(2)}</p>
                <p><strong>Discount:</strong>- ₹${((order.totalSavings+order.couponApplied.discount) || 0).toFixed(2)}</p>
                <p><strong>Shipping Charges:</strong> ₹${((order.deliveryCharge) || 0).toFixed(2)}</p>
                <p><strong>Total:</strong> ₹${(order.total).toFixed(2)}</p>
            </div>

            <!-- Footer -->
            <div style="text-align: center; margin-top: 30px; font-size: 14px; color: #666;">
                <p>Thank you for shopping with us!</p>
                <p>Contact us at support@nexora.com for any queries.</p>
            </div>
        </div>
    `;

            // Create a temporary container for the invoice
            const tempContainer = document.createElement('div');
            tempContainer.innerHTML = invoiceHtml;
            document.body.appendChild(tempContainer);

            // Generate PDF
            html2canvas(tempContainer, { scale: 2 }).then((canvas) => {
                const imgData = canvas.toDataURL('image/png');
                const pdf = new jspdf.jsPDF('p', 'mm', 'a4');
                const imgWidth = 210;
                const imgHeight = (canvas.height * imgWidth) / canvas.width;

                pdf.addImage(imgData, 'PNG', 0, 0, imgWidth, imgHeight);
                pdf.save(`invoice_${order.orderNumber}.pdf`);
            });
            document.body.removeChild(tempContainer);
        } catch (error) {
            console.log(error);
            notyf.error('Cannot download invoice')
        } finally {
            notyf.success('Downloaded')
        }

    }


</script>