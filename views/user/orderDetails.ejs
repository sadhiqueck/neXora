<script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/js/all.min.js"></script>


<div class="container mx-auto px-4 py-8 max-w-[80%] ">
    <!-- breadcrumb -->

    <div class="mb-4 items-end justify-between space-y-4 sm:flex sm:space-y-0 md:mb-8 pl-4 pr-20 pt-6">
        <div>
            <nav class="flex" aria-label="Breadcrumb">
                <ol class="inline-flex items-center space-x-1 md:space-x-2 rtl:space-x-reverse">
                    <li class="inline-flex items-center">
                        <a href="/user/home"
                            class="inline-flex items-center text-sm font-medium text-gray-500 hover:text-primary-600 dark:text-gray-400 dark:hover:text-white">
                            <svg class="me-2.5 h-3 w-3" aria-hidden="true" xmlns="http://www.w3.org/2000/svg"
                                fill="currentColor" viewBox="0 0 20 20">
                                <path
                                    d="m19.707 9.293-2-2-7-7a1 1 0 0 0-1.414 0l-7 7-2 2a1 1 0 0 0 1.414 1.414L2 10.414V18a2 2 0 0 0 2 2h3a1 1 0 0 0 1-1v-4a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1v4a1 1 0 0 0 1 1h3a2 2 0 0 0 2-2v-7.586l.293.293a1 1 0 0 0 1.414-1.414Z" />
                            </svg>
                            Home
                        </a>
                    </li>

                    <li aria-current="page">
                        <div class="flex items-center">
                            <svg class="h-5 w-5 text-gray-400 rtl:rotate-180" aria-hidden="true"
                                xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="none"
                                viewBox="0 0 24 24">
                                <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round"
                                    stroke-width="2" d="m9 5 7 7-7 7" />
                            </svg>
                            <a href="/user/orders"
                                class="ms-1 text-sm font-medium text-gray-500 dark:text-gray-400 md:ms-2">
                                Orders
                            </a>
                        </div>
                    </li>
                    <li aria-current="page">
                        <div class="flex items-center">
                            <svg class="h-5 w-5 text-gray-400 rtl:rotate-180" aria-hidden="true"
                                xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="none"
                                viewBox="0 0 24 24">
                                <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round"
                                    stroke-width="2" d="m9 5 7 7-7 7" />
                            </svg>
                            <span class="ms-1 text-sm font-medium text-gray-700 md:ms-2">
                                <%=order.orderNumber %>
                            </span>
                        </div>
                    </li>
                </ol>
            </nav>

        </div>

    </div>

    <!-- Order Header -->
    <div class="bg-white rounded-lg shadow-sm p-6 mb-6">
        <div class="flex flex-wrap justify-between items-start gap-4">
            <div>
                <div class="flex items-center gap-3">
                    <h1
                        class="text-2xl font-semibold <%= order.status === 'Cancelled' ? 'text-gray-500' : 'text-gray-800' %>">
                        Order <span class="text-xl">#<%= order.orderNumber %></span>
                    </h1>
                    <% if(order.status==='Cancelled' ) { %>
                        <div class="relative inline-flex items-center">

                            <span
                                class="relative inline-flex items-center gap-1.5 px-3 py-1 rounded-full bg-red-50 text-red-600 border border-red-200 shadow-sm">
                                <span class="h-1.5 w-1.5 rounded-full bg-red-500"></span>
                                <span class="text-sm font-semibold tracking-wide">Order Cancelled</span>
                            </span>
                        </div>
                        <% } %>
                </div>
                <p class="text-gray-500 mt-1">Placed on <%= order.orderDate.toLocaleString('en-IN',{ year:'numeric',
                        month:'short', day:'numeric', }) %>
                </p>
            </div>
            <div class="flex gap-3">
                <button
                    class="inline-flex items-center px-4 py-2 bg-gray-100 hover:bg-gray-200 text-gray-700 rounded-lg">
                    <i class="fas fa-download mr-2"></i>
                    Download Invoice
                </button>
                <% if(order.status !=='Cancelled' ) { %>
                    <button id="orderCancelBtn"
                        class="inline-flex items-center px-4 py-2 bg-red-50 hover:bg-red-100 text-red-600 rounded-lg">
                        <i class="fas fa-times mr-2"></i>
                        Cancel Order
                    </button>
                    <% } %>
            </div>
        </div>

        <!-- Order Progress -->
        <div class="mt-8 <%= order.status === 'Cancelled' ? 'opacity-75' : '' %>">
            <div class="flex items-center justify-between mb-4">
                <div class="flex items-center">
                    <span
                        class="w-8 h-8 <%= order.status === 'Cancelled' ? 'bg-gray-400' : 'bg-secondry-button' %> text-white rounded-full flex items-center justify-center">
                        <i class="fas <%= order.status === 'Cancelled' ? 'fa-times' : 'fa-check' %>"></i>
                    </span>
                    <div class="ml-3">
                        <p class="font-medium">Order <%= order.status==='Cancelled' ? 'Cancelled' : 'Confirmed' %>
                        </p>
                        <%= order.orderDate.toLocaleString('en-IN', { month: 'short' , day: 'numeric' , hour: '2-digit'
                            , minute: '2-digit' }) %>
                    </div>
                </div>

                <!-- shipped -->
                <div class="flex items-center">
                    <span
                        class="w-8 h-8 rounded-full flex items-center justify-center text-white <%= order.status === 'Shipped' || order.status === 'Out for delivery' || order.status === 'Delivered' ? 'bg-secondry-button' : 'bg-gray-400' %>">
                        <i class="fas fa-truck-fast"></i>
                    </span>
                    <div class="ml-3">
                        <p class="font-medium">Shipped</p>
                        <p class="text-sm text-gray-500">
                            <%=order.status === 'Shipped' || order.status === 'Out for delivery' || order.status === 'Delivered' ?
                                order.shippedDate.toLocaleString('en-IN', { month: 'short' , day: 'numeric' ,
                                hour: '2-digit' , minute: '2-digit' }) :'---' %>
                        </p>
                    </div>
                </div>
                <!-- out for delivery -->
                <div class="flex items-center">
                    <span
                        class="w-8 h-8 rounded-full flex items-center justify-center text-white <%= order.status === 'Out for delivery' || order.status === 'Delivered' ? 'bg-secondry-button' : 'bg-gray-400' %>">
                        <i class="fas fa-motorcycle"></i>
                    </span>
                    <div class="ml-3">
                        <p class="font-medium">Out for Delivery</p>
                        <p class="text-sm text-gray-500">
                            <%= order.status === 'Out for delivery' || order.status === 'Delivered' ?
                                (order.deliveredDate.toLocaleString('en-IN', { month: 'short' , day: 'numeric' ,
                                hour: '2-digit' , minute: '2-digit' })) :'---' %>
                        </p>
                    </div>
                </div>
                <div class="flex items-center">
                    <span
                        class="w-8 h-8 rounded-full flex items-center justify-center text-white <%= order.status=== 'Delivered' ? 'bg-secondry-button' : 'bg-gray-400  ' %>">
                        <i class="fas fa-flag"></i>
                    </span>
                    <div class="ml-3">
                        <p class="font-medium">Delivered</p>
                        <p class="text-sm text-gray-500">
                            <%= order.status==='Delivered' ? (order.deliveredDate.toLocaleString('en-IN', {
                                month: 'short' , day: 'numeric' , hour: '2-digit' , minute: '2-digit' })) :'---' %>
                        </p>
                    </div>
                </div>
            </div>
            <div class="relative pt-1">
                <div class="flex mb-2 items-center justify-between">
                    <div class="w-full bg-gray-200 rounded-full h-2">
                        <div class=" bg-secondry-button h-2 rounded-full w-1/4 <% if(order.status==='Shipped'){ %>
                                w-2/4
                            <% }else if(order.status==='Out for delivery'){ %> 
                                 w-3/4
                            <% }else if(order.status==='Delivered'){ %> 
                                w-full
                                <% } %>">
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- orders -->
    <div class="bg-white rounded-lg shadow-sm overflow-hidden mb-6">
        <div class="p-6">
            <h2 class="text-lg font-semibold text-gray-800 mb-4">Order Items</h2>
        </div>
        <div class="border-t border-gray-100">
            <% order.products.forEach(product=>{ %>

                <!-- Items -->
                <div class="flex flex-col space-y-4 border-b border-gray-200 pb-3 p-6">
                    <div
                        class="flex items-start space-x-4 <%= product.status === 'Cancelled' ? 'opacity-75 bg-gray-50' : '' %>">
                        <img src="<%=product.images %>" alt="Product"
                            class="w-20 h-18 rounded-lg object-fit bg-gray-100 p-1 <%= product.status === 'Cancelled' ? 'filter grayscale' : '' %>" />
                        <div class="flex-1 min-w-0">
                            <div class="flex items-center justify-between">
                                <h3
                                    class="text-sm font-medium <%= product.status === 'Cancelled' ? 'text-gray-500' : 'text-gray-900' %>">
                                    <%=product.productName %>
                                </h3>
                                <% if(product.status==='Cancelled' ) { %>
                                    <div class="relative inline-flex items-center">
                                        <span
                                            class="relative inline-flex items-center   gap-1.5 px-3 py-1 rounded-full bg-red-50 text-red-600 border border-red-200 shadow-sm">
                                            <span class="h-1.5 w-1.5 rounded-full bg-red-500"></span>
                                            <span class="text-sm font-semibold ">Cancelled</span>
                                        </span>
                                    </div>
                                    <% } %>
                            </div>
                            <p class="text-gray-500 text-sm">Model: <%=product.model %>
                            </p>
                          
                            <p class="text-gray-500 text-sm mt-1">
                                Color: <%= product.variant.color %> 
                                <%= product.variant.storage ? '| Size: ' + product.variant.storage : '' %>
                              </p>
                            <p class="text-sm text-gray-500 mt-1">Quantity: <%=product.quantity %>
                            </p>
                            <div class="mt-4">
                                <p
                                    class="text-sm <%= product.status === 'Cancelled' ? 'text-gray-500 line-through' : 'text-secondry-button' %> font-semibold">
                                    <i class="fas fa-truck mr-2"></i>
                                    Item will be delivered by <%= product.deliveryDate.toLocaleString('en-IN',{
                                        year:'numeric',month:'short', day:'numeric', }) %>
                                </p>
                            </div>
                        </div>
                        <div class="text-right space-y-1">
                            <p
                                class="text-sm font-medium <%= product.status === 'Cancelled' ? 'text-gray-500 line-through' : 'text-gray-900' %>">
                                <%= product.discountedPrice.toLocaleString('en-IN',{style:'currency',currency:"INR"}) %>
                            </p>
                            <p class="text-xs text-gray-500">per unit</p>
                            <p class="text-xs text-gray-500">Return Period: <%=product.returnPeriod < 1 ? "X No return policy for this product" : `${product.returnPeriod} days` %></p>
                            <p class="text-xs text-gray-500 pb-3">Warranty: <%=product.warranty %> months</p>
                            <!-- cancel button -->
                            <div class="flex justify-end">
                                <% if(product.status !=='Cancelled' ) { %>
                                    <button data-product-id="<%= product._id %>"
                                        class="cancelItem text-red-500 hover:text-red-600 text-sm font-inter font-semibold">
                                        <i class="fas fa-times"></i>
                                        Cancel Item
                                    </button>
                                    <% } %>
                            </div>
                        </div>
                    </div>
                </div>
                <% }) %>
        </div>
    </div>

    <!-- Order Summary -->
    <div class="bg-white rounded-lg shadow-sm p-6 mb-6 ">
        <h2 class="text-lg font-semibold text-gray-800 mb-4">Order Summary</h2>
        <div class="space-y-3">
            <div class="flex justify-between text-gray-600">
                <span class="text-gray-700">Subtotal</span>
                <span>
                    <%=order.originalTotal.toLocaleString('en-IN',{style:'currency', currency:'INR'})%>
                </span>
            </div>
            <div class="flex justify-between text-gray-600">
                <span>Discounts</span>
                <span>
                    <%= order.totalSavings.toLocaleString('en-IN',{style:'currency', currency:'INR'}) %>
                </span>
            </div>
            <div class="flex justify-between text-gray-600">
                <span>Delivery Charge</span>
                <span>
                    <%= order.deliveryCharge.toLocaleString('en-IN',{style:'currency', currency:'INR'}) %>
                </span>
            </div>
            <div class="flex justify-between text-gray-600">
                <span>Tax/GST</span>
                <span>
                    <%= order.tax.toLocaleString('en-IN',{style:'currency', currency:'INR'}) %>
                </span>
            </div>
            <div class="flex justify-between text-green-600">
                <span>Coupon Discount</span>
                <span>-00.00</span>
            </div>
            <div class="border-t pt-3 mt-3">
                <div class="flex justify-between font-semibold text-lg">
                    <span>Total</span>
                    <span>
                        <%= order.total.toLocaleString('en-IN',{style:'currency', currency:'INR'}) %>
                    </span>
                </div>
            </div>
            <div class="mt-4 text-sm">
                <p class="text-green-600">
                    <i class="fas fa-tag mr-2"></i>Coupon Code: HAPPY20
                </p>
            </div>
        </div>
    </div>

    <!-- Shipping & Payment Info -->
    <div class="grid md:grid-cols-2 gap-6 shadow-md rounded-lg">
        <div class="bg-white rounded-lg shadow-sm p-6">
            <h2 class="text-lg font-semibold text-gray-800 mb-4">Shipping Address</h2>
            <div class="text-gray-600">
                <p class="font-medium">
                    <%= order.shippingAddress.fullName %>
                </p>
                <p>
                    <%= order.shippingAddress.addressLine1 %>,
                </p>
                <p>
                    <%= order.shippingAddress.addressLine2 %>,<%= order.shippingAddress.landmark %>
                </p>
                <p>
                    <%= order.shippingAddress.city %>, <%= order.shippingAddress.state %>
                            - <%= order.shippingAddress.pincode %>
                </p>
                <p>India</p>
                <p class="mt-2">+91 <%= order.shippingAddress.phone %>
                </p>
                <p>
                    <%= user.email %>
                </p>
            </div>
        </div>

        <div class="bg-white rounded-lg shadow-sm p-6">
            <h2 class="text-lg font-semibold text-gray-800 mb-4">Payment Info</h2>
            <div class="bg-white rounded-lg p-4">
                <div class="flex items-center justify-between mb-4">
                    <div class="flex items-center space-x-3">
                        <svg class="w-6 h-6 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                d="M17 9V7a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2m2 4h10a2 2 0 002-2v-6a2 2 0 00-2-2H9a2 2 0 00-2 2v6a2 2 0 002 2zm7-5a2 2 0 11-4 0 2 2 0 014 0z">
                            </path>
                        </svg>
                        <div>
                            <p class="font-medium text-gray-900 uppercase">
                                <%= order.paymentMethod %>
                            </p>
                        </div>
                    </div>
                    <div class="flex items-center space-x-2">
                        <span>Payment Status: </span>
                        <% if (order.paymentMethod==="cod" ) { %>
                            <span
                                class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-indigo-100 text-indigo-800">
                                COD
                            </span>
                            <% } else if (order.paymentStatus==="Pending" ) { %>
                                <span
                                    class="px-2 py-1 text-xs rounded-full bg-orange-100 text-orange-800">Pending</span>
                                <% } else if (order.paymentStatus==="success" ) { %>
                                    <span
                                        class="px-2 py-1 text-xs rounded-full bg-purple-100 text-purple-800">Success</span>
                                    <% } else {%>
                                        <span
                                            class="px-2 py-1 text-xs rounded-full bg-red-100 text-red-800">Cancelled</span>

                                        <% }%>
                    </div>
                </div>
                <div class="text-sm text-gray-600">
                    <p class="mb-1">Transaction ID: TXN-2024-789456</p>
                    <p>Processed on <%= order.orderDate%>
                    </p>
                </div>
            </div>
        </div>

    </div>
</div>
</div>


