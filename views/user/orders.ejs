<div class="max-w-full xl mx-auto p-6 mb-20 mt-6 ">
  <h1 class="text-2xl font-bold mb-6">Your Profile </h1>

  <div class="grid grid-cols-1 lg:grid-cols-[300px,1fr] gap-6">
    <!-- Left Sidebar -->
    <div class="bg-white rounded-lg p-6 shadow-lg border-2 border-gray-200 h-fit ">
      <div class="flex w-full  items-center mb-4 pb-5 border-b-2 ">
        <div class="w-1/4">
          <img src="/Icons/profile-pic-male.svg" alt="" class="w-10 h-10">
        </div>
        <div class=" w-3/4 ">
          <p class="text-xs">Hello,</p>
          <h2 class="font-semibold">
            <%=user.username %>
          </h2>
        </div>

      </div>

      <nav class="space-y-4">
        <a href="/user/profile"
          class="flex items-center transform hover:translate-x-2 transition-transform ease-in duration-200 text-gray-700 hover:text-gray-900">
          <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <circle cx="12" cy="7" r="4" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" />
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 20c0-3.5 3-6 6-6s6 2.5 6 6" />
          </svg>

          Profile Information
        </a>
        <a href="#" class="flex items-center text-button-color">
          <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
              d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z" />
          </svg>
          My orders
        </a>
        <a href="/user/profile-address"
          class="flex items-center transform hover:translate-x-2 transition-transform ease-in duration-200 text-gray-700 hover:text-gray-900">
          <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
              d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" />
          </svg>
          Manage Addresses
        </a>
        <a href="#"
          class="flex items-center transform hover:translate-x-2 transition-transform ease-in duration-200 text-gray-700 hover:text-gray-900">
          <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
              d="M3 8h18M3 16h18M6 4h12a2 2 0 012 2v12a2 2 0 01-2 2H6a2 2 0 01-2-2V6a2 2 0 012-2z" />
          </svg>
          My wallet
        </a>
        <a href="#"
          class="flex items-center transform hover:translate-x-2 transition-transform ease-in duration-200 text-gray-700 hover:text-gray-900">
          <svg xmlns="http://www.w3.org/2000/svg" height="24px" viewBox="0 -960 960 960" width="24px"
            class="w-5 h-5 mr-3" fill="currentColor">
            <path
              d="m480-144-50-45q-100-89-165-152.5t-102.5-113Q125-504 110.5-545T96-629q0-89 61-150t150-61q49 0 95 21t78 59q32-38 78-59t95-21q89 0 150 61t61 150q0 43-14 83t-51.5 89q-37.5 49-103 113.5T528-187l-48 43Zm0-97q93-83 153-141.5t95.5-102Q764-528 778-562t14-67q0-59-40-99t-99-40q-35 0-65.5 14.5T535-713l-35 41h-40l-35-41q-22-26-53.5-40.5T307-768q-59 0-99 40t-40 99q0 33 13 65.5t47.5 75.5q34.5 43 95 102T480-241Zm0-264Z" />
          </svg>


          My Wishlist
        </a>

        <a href="/user/logout" class="flex items-center text-red-600 hover:text-red-700 border-t-2 grey-600 pt-4 mt-3">
          <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
              d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1" />
          </svg>
          Log out
        </a>
      </nav>
    </div>


    <!-- Right Content -->
    <div class="space-y-6 p-6 w-full mx-auto bg-white rounded-lg shadow-lg border-2  ">
      <h2 class="font-semibold mb-6 text-xl">Your Orders</h2>


      <!-- Order list container -->
      <div class="max-w-6xl mx-auto space-y-4 p-4">
        <% if(orders.length> 0) { %>
          <% orders.forEach(order=> { %>

            <div <% if(order.status==="Cancelled" ) {%>
              class="bg-white rounded-lg shadow-md p-6 font-inter border-l-4 border-red-600 bg-red-50/30";
              <% }else if(order.status==="Delivered" ){ %>
                class="bg-white rounded-lg shadow-md p-6 font-inter border-l-4 border-green-500 bg-green-50/30";
                <% }else{ %>
                  class="bg-white rounded-lg shadow-md p-6 font-inter border-l-4 border-indigo-500 bg-green-50/30";
                  <% } %>



                    <!-- Header with dynamic background -->
                    <div class="items-center rounded-t-lg -mx-6 -mt-6 mb-4 px-6 py-2
                        <%= order.status === 'Cancelled' ? 'bg-red-100/50' : 
                           order.status === 'Delivered' ? 'bg-green-100/50' : 
                           'bg-purple-100' %>">
                      <div class="flex justify-between">
                        <div class="text-sm">
                          Order-Date:
                          <span class="<%= order.status === 'Cancelled' ? 'text-red-900' : 
                                              order.status === 'Delivered' ? 'text-green-900' : 
                                              'text-blue-900' %>">
                            <%= order.orderDate.toLocaleString('en-IN',{ year:'numeric', month:'short', day:'numeric',
                              }) %>
                          </span>
                        </div>
                        <div class="flex gap-8 text-sm text-gray-700">
                          <div class="text-xs text-gray-700">
                            Order Id- #<%= order.orderNumber%>
                          </div>
                        </div>
                      </div>
                      <div class="flex flex-col items-end">
                        <a href="/user/order-details/<%=order._id%>">
                          <button class="text-xs font-medium
                                    <%= order.status === 'Cancelled' ? 'text-red-900 hover:text-red-700' : 
                                       order.status === 'Delivered' ? 'text-green-900 hover:text-green-700' : 
                                       'text-blue-900 hover:text-blue-700' %>">
                            View Order Details
                          </button>
                        </a>
                      </div>
                    </div>

                    <!-- Main content -->
                    <div class="flex items-center justify-between 
                        <%= order.status === 'Cancelled' ? 'opacity-75' : '' %>">
                      <!-- Left side with products and details -->
                      <div class="w-3/4 flex flex-col gap-6">
                        <% order.products.forEach(product=> { %>
                          <div class="flex gap-6 items-center">
                            <div class="w-16 h-16">
                              <img src="<%= product.images %>" alt="<%= product.productName %>" class="w-full h-full object-contain bg-gray-50 rounded-md
                                                <%= order.status === 'Cancelled' ? 'filter grayscale' : '' %>" />
                            </div>
                            <div class="flex flex-col gap-0.5">
                              <h3
                                class="font-normal <%= order.status === 'Cancelled' ? 'text-gray-500' : 'text-gray-900' %>">
                                <%= product.productName %>
                              </h3>
                              <p class="text-sm font-light text-gray-500">
                                Quantity: <%= product.quantity %>
                              </p>
                              <div class="flex gap-4 mt-2">
                                <p class="text-xs text-gray-600">
                                  Payment Method:
                                  <span class="<%= order.status === 'Cancelled' ? 'text-red-800' : 
                                                              order.status === 'Delivered' ? 'text-green-800' : 
                                                              'text-blue-800' %>">
                                    <%= order.paymentMethod %>
                                  </span>
                                </p>
                                <p class="text-xs font-light text-gray-600">
                                  <%= order.status==='Cancelled' ? 'Cancelled on:' : 'Expected Delivery by:' %>
                                    <span class="<%= order.status === 'Cancelled' ? 'text-red-800' : 
                                                              order.status === 'Delivered' ? 'text-green-800' : 
                                                              'text-blue-800' %>">
                                      <%= product.deliveryDate.toLocaleDateString('en-IN',{dateStyle:"medium"}) %>
                                    </span>
                                </p>
                              </div>
                            </div>
                          </div>
                          <% }); %>
                      </div>

                      <!-- Right side with payment info -->
                      <div class="flex w-1/4 flex-col items-end align-top gap-3">
                        <div>
                          <div class="text-sm text-gray-600 text-right">Total Amount</div>
                          <div class="<%= order.status === 'Cancelled' ? 'text-red-700 line-through' : 
                                              order.status === 'Delivered' ? 'text-green-700' : 
                                              'text-blue-700' %> font-medium">
                            â‚¹ <%= order.subTotal.toLocaleString('en-IN')%>.00
                          </div>
                        </div>

                        <div class="text-right">
                          <div class="text-sm text-gray-600">Order Status</div>
                          <% if (order.status==='Cancelled' ) { %>
                            <div class="relative inline-flex items-center">
                              <span class="absolute rounded-full bg-red-200 opacity-75"></span>
                              <span
                                class="relative inline-flex items-center gap-1.5 px-3 py-1 rounded-full bg-red-50 text-red-700 border border-red-200 shadow-sm">
                                <span class="h-1.5 w-1.5 rounded-full bg-red-500"></span>
                                <span class="text-xs font-semibold tracking-wide">Cancelled</span>
                              </span>
                            </div>
                            <% } else if (order.status==='Delivered' ) { %>
                              <div class="relative inline-flex items-center">
                                <span
                                  class="relative inline-flex items-center gap-1.5 px-3 py-1 rounded-full bg-green-50 text-green-700 border border-green-200 shadow-sm">
                                  <span class="h-1.5 w-1.5 rounded-full bg-green-500"></span>
                                  <span class="text-xs font-semibold tracking-wide">
                                    Delivered on <%= order.deliveredDate.toLocaleDateString('en-IN',{dateStyle:'medium'}) %>
                                  </span>
                                </span>
                              </div>
                              <% } else if (order.status==='Shipped' ) { %>
                                <div class="relative inline-flex items-center">
                                  <span class="absolute rounded-full bg-indigo-200 opacity-75"></span>
                                  <span
                                    class="relative inline-flex items-center gap-1.5 px-3 py-1 rounded-full bg-indigo-50 text-indigo-700 border border-indigo-200 shadow-sm">
                                    <span class="h-1.5 w-1.5 rounded-full bg-indigo-500"></span>
                                    <span class="text-xs font-semibold tracking-wide">Shipped</span>
                                  </span>
                                </div>
                                <% } else if (order.status==='Out for delivery' ) { %>
                                  <div class="relative inline-flex items-center">
                                    <span class="absolute rounded-full bg-yellow-200 opacity-75"></span>
                                    <span
                                      class="relative inline-flex items-center gap-1.5 px-3 py-1 rounded-full bg-yellow-50 text-yellow-700 border border-yellow-200 shadow-sm">
                                      <span class="h-1.5 w-1.5 rounded-full bg-yellow-500"></span>
                                      <span class="text-xs font-semibold tracking-wide">Out for Delivery</span>
                                    </span>
                                  </div>
                                  <% } else { %>
                                    <div class="text-indigo-600">Processing</div>
                                    <% } %>
                        </div>
                      </div>
                    </div>
            </div>
            <% }) %>
              <% } else { %>
                <h1 class="font-medium text-xl text-center text-gray-600"><i>"No orders found!"</i></h1>
                <a href="/user/products/all" class="text-red-500 flex justify-center underline hover:text-red-900">
                  Continue Shopping
                </a>
                <% } %>
      </div>
    </div>
  </div>
</div>