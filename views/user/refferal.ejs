<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Your Referral Code - Ecommerce Site</title>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/js/all.min.js"></script>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-50 min-h-screen">
    <div class="container mx-auto px-4 py-8">
        <div class="text-center mb-12">
            <h1 class="text-4xl font-bold text-gray-900 mb-4">Invite Friends & Earn Rewards</h1>
            <p class="text-xl text-gray-600">Share your love for Nexora and get rewarded!</p>
        </div>
        <!-- Referral Section -->
        <div class="max-w-3xl mx-auto bg-white rounded-lg shadow-md p-6">

            <h1 class="text-3xl font-bold text-gray-800 mb-4">Your Referral Code</h1>
            
            <!-- Referral Code Display -->
            <div class="mb-8">
                <div class="flex items-center justify-between bg-gray-100 p-4 rounded-lg">
                    <span class="text-2xl font-mono font-bold text-blue-600">X7F9R2</span>
                    <button 
                        onclick="copyCode()"
                        class="flex items-center space-x-2 text-blue-600 hover:text-blue-700 transition-colors"
                        title="Copy to clipboard">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z" />
                        </svg>
                        <span class="hidden sm:inline">Copy Code</span>
                    </button>
                </div>
            </div>


     <!-- Referral Stats -->
     <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
        <!-- Total Earnings -->
        <div class="bg-white rounded-lg shadow-md p-6 text-center">
            <h3 class="text-lg font-medium text-gray-600 mb-2">Total Earnings</h3>
            <p class="text-3xl font-bold text-indigo-600">$120.00</p>
            <p class="text-sm text-gray-600 mt-2">From 12 referrals</p>
        </div>

        <!-- Pending Rewards -->
        <div class="bg-white rounded-lg shadow-md p-6 text-center">
            <h3 class="text-lg font-medium text-gray-600 mb-2">Total Referrals</h3>
            <p class="text-5xl font-bold text-gray-900">5</p>
        </div>

        <!-- Available Invites -->
        <div class="bg-white rounded-lg shadow-md p-6 text-center">
            <h3 class="text-lg font-medium text-gray-600 mb-2">Available Invites</h3>
            <p class="text-3xl font-bold text-green-600">Unlimited</p>
            <p class="text-sm text-gray-600 mt-2">Share with everyone!</p>
        </div>
    </div>

            <!-- How it Works -->
            <div class="bg-blue-50 p-4 rounded-lg">
                <h2 class="text-lg font-semibold text-gray-800 mb-2">How it works</h2>
                <p class="text-gray-600">
                    Share your referral code with friends. When they make their first purchase using your code, 
                    both you and your friend will receive rewards!
                </p>
            </div>

            <!-- Referral History -->
            <div>
                <h2 class="text-xl font-bold text-gray-800 mb-4 mt-10">Referral History</h2>
                <div class="space-y-4">
                    <!-- Referral History Item -->
                    <div class="flex items-center justify-between bg-gray-50 p-4 rounded-lg">
                        <div>
                            <p class="font-semibold text-gray-800">John Doe</p>
                            <p class="text-sm text-gray-500">Referred on 12 Oct 2023</p>
                        </div>
                        <span class="text-green-600 font-semibold">$10 Earned</span>
                    </div>
                    <!-- Referral History Item -->
                    <div class="flex items-center justify-between bg-gray-50 p-4 rounded-lg">
                        <div>
                            <p class="font-semibold text-gray-800">Jane Smith</p>
                            <p class="text-sm text-gray-500">Referred on 10 Oct 2023</p>
                        </div>
                        <span class="text-green-600 font-semibold">$10 Earned</span>
                    </div>
                    <!-- Referral History Item -->
                    <div class="flex items-center justify-between bg-gray-50 p-4 rounded-lg">
                        <div>
                            <p class="font-semibold text-gray-800">Mike Johnson</p>
                            <p class="text-sm text-gray-500">Referred on 8 Oct 2023</p>
                        </div>
                        <span class="text-green-600 font-semibold">$10 Earned</span>
                    </div>
                </div>
            </div>

        </div>
    </div>

    <script>
        function copyCode() {
            const code = 'X7F9R2';
            navigator.clipboard.writeText(code);
            
            // Visual feedback
            const button = event.currentTarget;
            button.innerHTML = `
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-green-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                </svg>
                <span class="hidden sm:inline">Copied!</span>
            `;
            
            setTimeout(() => {
                button.innerHTML = `
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z" />
                    </svg>
                    <span class="hidden sm:inline">Copy Code</span>
                `;
            }, 2000);
        }
    </script>
</body>
</html>