<body id="signup_page">

    <main>

        <section class="bg-main-white pt-10 pr-20 pl-20 pb-10 ">
            <div class="grid grid-cols-1 lg:grid-cols-2 shadow-lg rounded-lg">
                <div class="flex items-center justify-center px-4 py-10 bg-white sm:px-6 lg:px-8 sm:py-16 lg:py-24">
                    <div class="xl:w-full xl:max-w-sm 2xl:max-w-md xl:mx-auto">
                        <h2 class="text-3xl font-bold leading-tight text-black sm:text-4xl">Create Account</h2>
                        <p class="mt-2 text-base text-gray-600">Already have an account? <a href="/user/login" title=""
                                class="font-medium text-secondry-button transition-all duration-200 hover:text-blue-700 hover:underline focus:text-blue-700">Login</a>
                        </p>
                        <p id="mssg" class="text-center pt-4 text-red-500">
                            <% if (typeof mssg !=='undefined' ) { %><%- mssg%>
                                    <% } %>
                        </p>

                        <form action="/user/send-otp" method="POST" class="mt-8" id="form">
                            <div class="space-y-5">
                                <div>
                                    <label for="username" class="text-base font-medium text-gray-900"> Full Name
                                    </label>
                                    <div class="mt-2.5">
                                        <input type="text" name="username" id="username"
                                            placeholder="Enter your full name"
                                            class="block w-full p-4 text-black placeholder-gray-500 transition-all duration-200 border border-gray-200 rounded-md bg-gray-50 focus:outline-none focus:border-button-color focus:bg-white caret-button-color" />
                                    </div>
                                </div>

                                <div>
                                    <label for="email" class="text-base font-medium text-gray-900"> Email address
                                    </label>
                                    <div class="mt-2.5">
                                        <input type="text" name="email" id="email"
                                            placeholder="Enter email to get started"
                                            class="block w-full p-4 text-black placeholder-gray-500 transition-all duration-200 border border-gray-200 rounded-md bg-gray-50 focus:outline-none focus:border-button-color focus:bg-white caret-button-color" />
                                    </div>
                                </div>

                                <div>
                                    <label for="password" class="text-base font-medium text-gray-900"> Password </label>
                                    <div class="mt-2.5">
                                        <input type="password" name="password" id="password"
                                            placeholder="Create new password"
                                            class="block w-full p-4 text-black placeholder-gray-500 transition-all duration-200 border border-gray-200 rounded-md bg-gray-50 focus:outline-none focus:border-button-color focus:bg-white caret-button-color" />
                                    </div>
                                </div>
                                <div>
                                    <label for="password" class="text-base font-medium text-gray-900"> Re-enter Password
                                    </label>
                                    <div class="mt-2.5">
                                        <input type="password" name="" id="confirmPassword"
                                            placeholder="Re-enter you password"
                                            class="block w-full p-4 text-black placeholder-gray-500 transition-all duration-200 border border-gray-200 rounded-md bg-gray-50 focus:outline-none focus:border-button-color focus:bg-white caret-button-color" />
                                    </div>
                                </div>
                                <div>
                                    <label for="referral" class="text-base font-medium text-gray-900">Referral Code
                                        <span class="text-sm text-gray-500">(Optional)</span></label>
                                    <div class="mt-2.5 relative">
                                        <input type="text" name="referralCode" id="referralCode"
                                            placeholder="Enter referral code"
                                            class="block w-full p-4 text-black placeholder-gray-500 transition-all duration-200 border border-gray-200 rounded-md bg-gray-50 focus:outline-none focus:border-button-color focus:bg-white caret-button-color uppercase" />
                                        <button type="button" onclick="verifyReferralCode()"
                                            class="absolute right-2 top-1/2 transform -translate-y-1/2 px-4 py-2 text-sm font-medium text-button-color hover:text-secondry-button focus:outline-none">
                                            Verify
                                        </button>
                                    </div>
                                    <p id="referralStatus" class="mt-1 text-sm  hidden"></p>
                                </div>


                                <div class="flex items-center">
                                    <input type="checkbox" name="agree" id="agree"
                                        class="w-5 h-5 text-button-color bg-white border-gray-400 rounded ring-1 ring-offset-2 ring-grey-100 focus:ring-gray-100" />

                                    <label for="agree" class="ml-3 text-sm font-medium text-gray-500">
                                        I agree to Nexora's <a href="#" title=""
                                            class="text-button-color hover:text-secondry-button hover:underline">Terms
                                            of
                                            Service</a> and <a href="#" title=""
                                            class="text-button-color hover:text-secondry-button hover:underline">Privacy
                                            Policy</a>
                                    </label>
                                </div>

                                <div>
                                    <button type="submit"
                                        class="inline-flex items-center justify-center w-full px-4 py-4 text-base font-semibold text-white transition-all duration-200 bg-button-color border border-transparent rounded-lg focus:outline-none hover:bg-secondry-button focus:bg-secondry-button">
                                        Verify your email
                                    </button>
                                </div>
                            </div>
                        </form>

                        <div class="mt-3 space-y-3">
                            <div class="flex items-center mt-3 space-y-3">
                                <div class="w-full h-0.5 bg-gray-200 dark:bg-gray-700"></div>
                                <div class="px-5 text-center text-gray-500 dark:text-gray-400">or</div>
                                <div class="w-full h-0.5 bg-gray-200 dark:bg-gray-700"></div>
                            </div>

                            <button id="g_id_onload" onclick="window.location.href='/user/auth/google'"
                                class=" relative inline-flex items-center justify-center w-full px-4 py-4 text-base font-semibold text-gray-700 transition-all duration-200 bg-white border-2 border-gray-200 rounded-lg hover:bg-gray-100 focus:bg-gray-100 hover:text-black focus:text-black focus:outline-none "
                                type="submit">
                                <svg class="w-5 h-5 mr-2" viewBox="0 0 21 20" fill="none"
                                    xmlns="http://www.w3.org/2000/svg">
                                    <g clip-path="url(#clip0_13183_10121)">
                                        <path
                                            d="M20.3081 10.2303C20.3081 9.55056 20.253 8.86711 20.1354 8.19836H10.7031V12.0492H16.1046C15.8804 13.2911 15.1602 14.3898 14.1057 15.0879V17.5866H17.3282C19.2205 15.8449 20.3081 13.2728 20.3081 10.2303Z"
                                            fill="#3F83F8"></path>
                                        <path
                                            d="M10.7019 20.0006C13.3989 20.0006 15.6734 19.1151 17.3306 17.5865L14.1081 15.0879C13.2115 15.6979 12.0541 16.0433 10.7056 16.0433C8.09669 16.0433 5.88468 14.2832 5.091 11.9169H1.76562V14.4927C3.46322 17.8695 6.92087 20.0006 10.7019 20.0006V20.0006Z"
                                            fill="#34A853"></path>
                                        <path
                                            d="M5.08857 11.9169C4.66969 10.6749 4.66969 9.33008 5.08857 8.08811V5.51233H1.76688C0.348541 8.33798 0.348541 11.667 1.76688 14.4927L5.08857 11.9169V11.9169Z"
                                            fill="#FBBC04"></path>
                                        <path
                                            d="M10.7019 3.95805C12.1276 3.936 13.5055 4.47247 14.538 5.45722L17.393 2.60218C15.5852 0.904587 13.1858 -0.0287217 10.7019 0.000673888C6.92087 0.000673888 3.46322 2.13185 1.76562 5.51234L5.08732 8.08813C5.87733 5.71811 8.09302 3.95805 10.7019 3.95805V3.95805Z"
                                            fill="#EA4335"></path>
                                    </g>
                                    <defs>
                                        <clipPath id="clip0_13183_10121">
                                            <rect width="20" height="20" fill="white" transform="translate(0.5)"></rect>
                                        </clipPath>
                                    </defs>
                                </svg>
                                Sign up with Google
                            </button>

                        </div>
                    </div>
                </div>

                <div class="flex items-center justify-center px-4 py-10 sm:py-16 lg:py-24 bg-white sm:px-6 lg:px-8">
                    <div>
                        <img class="w-auto mx-auto rounded-lg " src="/Images/signup_cover.jpg" alt="" />

                    </div>
                </div>
            </div>
        </section>


    </main>
    <script>
        function toTitleCase(input) {
            return input
                .toLowerCase()
                .split(' ')
                .map(word => word.charAt(0).toUpperCase() + word.slice(1))
                .join(' ');
        }

        document.querySelector('#form').addEventListener("submit", (event) => {
            const nameInput = document.getElementById("username");
            const titleCasedName = toTitleCase(nameInput.value);

            // Update the input value to the title-cased value
            nameInput.value = titleCasedName;
        });

        async function verifyReferralCode() {
            const referralCode = document.getElementById('referralCode').value;
            const statusElement = document.getElementById('referralStatus');

            if (!referralCode) {
                statusElement.textContent = 'Please enter a referral code';
                statusElement.classList.remove('hidden', 'text-green-500', 'text-red-500');
                statusElement.classList.add('text-gray-500');
                return;
            }

            try {
                const response = await fetch('/user/verify-referral', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({ referralCode }),
                });

                const data = await response.json();

                statusElement.classList.remove('hidden');
                if (data.valid) {
                    statusElement.textContent = 'Valid referral code';
                    statusElement.classList.remove('text-red-500', 'text-gray-500');
                    statusElement.classList.add('text-green-500');
                } else {
                    statusElement.textContent = 'Invalid referral code';
                    statusElement.classList.remove('text-green-500', 'text-gray-500');
                    statusElement.classList.add('text-red-500');
                }
            } catch (error) {
                statusElement.textContent = 'Error verifying referral code';
                statusElement.classList.remove('hidden', 'text-green-500', 'text-gray-500');
                statusElement.classList.add('text-red-500');
            }
        }
    </script>

    <script src="https://accounts.google.com/gsi/client" async defer></script>
</body>